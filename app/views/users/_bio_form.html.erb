<div class="hidden" data-inline-edit-target="form">
  <%= form_with(model: user, url: user_path(user), method: :patch, data: { turbo_frame: "user-bio" }) do |f| %>
    <div class="space-y-3">
      <div>
        <%= f.label :handle, "Handle", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <div class="relative">
          <span class="absolute left-3 top-1/2 transform -translate-y-1/2 text-gray-500">@</span>
          <%= f.text_field :handle, class: "input input-bordered w-full pl-8", placeholder: "username", data: { action: "keydown.enter->inline-edit#submit" } %>
        </div>
      </div>
      <div>
        <%= f.label :bio, "Bio", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.text_area :bio, class: "textarea textarea-bordered w-full", rows: 3, placeholder: "Tell us about yourself..." %>
      </div>
      <div>
        <%= f.label :location, "Location", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.text_field :location, class: "input input-bordered w-full", placeholder: "Where are you based?" %>
      </div>
      <div class="flex items-center gap-2">
        <%= f.submit "Save", class: "btn btn-primary btn-sm text-white" %>
        <button type="button" class="btn btn-ghost btn-sm" data-action="inline-edit#cancel">Cancel</button>
      </div>
    </div>
  <% end %>
</div>


