<%= turbo_frame_tag "user-profile-header" do %>
  <div class="flex justify-between items-start">
    <div class="flex-1">
      <h1 class="text-2xl font-bold text-gray-900"><%= user.name %></h1>
      <p class="text-gray-500 text-sm">
        <% if user.handle.present? %>
          @<%= user.handle %>
        <% else %>
          @<%= user.name.downcase.gsub(/\s+/, '') %>
        <% end %>
      </p>
      
      <% if primary_dosha %>
        <div class="mt-2 flex justify-start">
          <span class="inline-flex items-center py-1 rounded-full text-sm font-medium <%= dosha_color_class(primary_dosha) %>">
            <%= primary_dosha.name.titleize %> Dosha
          </span>
        </div>
      <% end %>
    </div>
    
    <!-- Action Buttons -->
    <div class="flex flex-col sm:flex-row space-y-2 sm:space-y-0 sm:space-x-2">
      <button class="px-4 py-2 text-sm font-medium text-gray-700 bg-ghost border border-gray-300 rounded-lg hover:bg-info focus:outline-none focus:ring-2 focus:ring-blue-500">
        <svg class="w-4 h-4 mr-2 inline" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
        </svg>
        Message
      </button>
      <button class="px-4 py-2 text-sm font-medium text-white bg-primary rounded-lg hover:bg-secondary focus:outline-none focus:ring-2 focus:ring-blue-500">
        <svg class="w-4 h-4 mr-2 inline" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m13.5-9a2.5 2.5 0 11-5 0 2.5 2.5 0 015 0z"></path>
        </svg>
        Connect
      </button>
    </div>
  </div>
<% end %>
