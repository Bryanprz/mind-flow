<%= turbo_frame_tag "user-profile-header" do %>
  <div class="flex justify-between items-start">
    <div class="flex-1">
      <h1 class="text-2xl font-bold text-gray-900"><%= user.name %></h1>
      <p class="text-gray-500 text-sm">
        <% if user.handle.present? %>
          @<%= user.handle %>
        <% else %>
          @<%= user.name.downcase.gsub(/\s+/, '') %>
        <% end %>
      </p>
      
      <% if primary_dosha %>
        <div class="mt-2 flex justify-start">
          <span class="inline-flex items-center py-1 rounded-full text-sm font-medium <%= dosha_color_class(primary_dosha) %>">
            <%= primary_dosha.name.titleize %> Dosha
          </span>
        </div>
      <% end %>
    </div>
    
    <!-- Action Buttons -->
    <div class="flex flex-col sm:flex-row space-y-2 sm:space-y-0 sm:space-x-2">
      <!-- Connect Button -->
      <button class="px-4 py-2 text-sm font-medium text-white bg-primary rounded-lg hover:bg-secondary focus:outline-none focus:ring-2 focus:ring-blue-500">
        <svg class="w-4 h-4 mr-2 inline" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m13.5-9a2.5 2.5 0 11-5 0 2.5 2.5 0 015 0z"></path>
        </svg>
        Connect
      </button>

      <!-- Private Message Button -->
      <% if user != Current.user %>
        <%= form_with url: create_private_room_path, method: :post, local: true, data: { turbo: false } do |f| %>
          <%= f.hidden_field :user_id, value: user.id %>
          <button type="submit" class="px-4 py-2 text-sm font-medium text-gray-600 bg-ghost border border-gray-300 rounded-lg hover:bg-gray-100 hover:text-gray-800 focus:outline-none focus:ring-2 focus:ring-blue-500 w-full flex items-center justify-center">
            <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
              <path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z"></path>
              <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z"></path>
            </svg>
            Message
          </button>
        <% end %>
      <% end %>
    </div>
  </div>
<% end %>
