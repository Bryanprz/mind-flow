<h3 class="text-lg font-semibold mt-5">6 Stages of Disease</h3>

<table class="table mt-2">
  <thead>
    <tr>
      <th>Stage</th>
      <th>Name</th>
      <th>Description</th>
      <th>Symptoms</th>
    </tr>
  </thead>
  <tbody>
    <% @symptoms.each do |symptom| %>
      <tr>
        <td class="font-bold"><%= symptom[:stage] %></td>
        <td><%= symptom[:name] %></td>
        <td><%= symptom[:description] %></td>
        <td><%= render_symptom_badges(symptom[:symptoms]) %></td>
      </tr>
    <% end %>
    <!-- row 1 -->
  </tbody>
</table>
