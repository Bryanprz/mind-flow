<div class="tabs tabs-lift mt-9">
  <label class="tab bg-blue-50 hover:bg-blue-100 text-blue-700 border-blue-100" data-tab="vata">
    <input type="radio" name="my_tabs_4" checked="checked" />
    <span class="flex items-center gap-2">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z" />
      </svg>
      Vata
    </span>
  </label>
  <div class="tab-content p-0 pb-5">
    <%= render 'shared/vata_info' %>
  </div>

  <label class="tab bg-red-50 hover:bg-red-100 text-red-700 border-red-100" data-tab="pitta">
    <input type="radio" name="my_tabs_4" />
    <span class="flex items-center gap-2">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1" />
      </svg>
      Pitta
    </span>
  </label>
  <div class="tab-content p-0">
    <%= render 'shared/pitta_info' %>
  </div>

  <label class="tab bg-green-50 hover:bg-green-100 text-green-700 border-green-100" data-tab="kapha">
    <input type="radio" name="my_tabs_4" />
    <span class="flex items-center gap-2">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z" />
      </svg>
      Kapha
    </span>
  </label>
  <div class="tab-content p-0">
    <%= render 'shared/kapha_info' %>
  </div>
</div>

<style>
  /* Custom styles to handle active tab state */
  .tabs input[type="radio"]:checked + span {
    @apply font-bold;
  }
  
  /* Ensure consistent border radius */
  .tabs > .tab {
    @apply rounded-t-2xl;
  }
  
  /* Remove default tab content padding since we handle it in the partials */
  .tab-content {
    @apply rounded-b-2xl overflow-hidden;
  }
</style>
