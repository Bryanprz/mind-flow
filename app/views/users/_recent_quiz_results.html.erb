<% if @recent_quiz_results %>
  <div class="bg-green-50 border-l-4 border-green-500 p-4 mb-8 rounded-r-lg">
    <div class="flex">
      <div class="flex-shrink-0">
        <svg class="h-5 w-5 text-green-500" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
        </svg>
      </div>
      <div class="ml-3">
        <h3 class="text-sm font-medium text-green-800">Your quiz results are ready!</h3>
        <div class="mt-2 text-sm text-green-700">
          <p>Primary Dosha: <span class="font-semibold"><%= @primary_dosha_name&.titleize %></span></p>
          <% if @secondary_dosha_name.present? %>
            <p>Secondary Dosha: <span class="font-semibold"><%= @secondary_dosha_name.titleize %></span></p>
          <% end %>
          
          <div class="mt-2">
            <h4 class="font-semibold">Your Dosha Scores:</h4>
            <ul class="space-y-1 mt-1">
              <% @dosha_percentages.sort_by { |_, v| -v }.each do |dosha, percentage| %>
                <li class="flex justify-between">
                  <span class="capitalize"><%= dosha %>:</span>
                  <span class="font-medium"><%= percentage %>%</span>
                </li>
              <% end %>
            </ul>
          </div>
          
          <div class="mt-3">
            <p class="text-xs text-green-600">Completed: <%= @recent_quiz_results[:completed_at].strftime('%B %d, %Y at %I:%M %p') %></p>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
