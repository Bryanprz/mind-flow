<% # Use either the user's quiz submission or the session-based results
   dosha_scores = @dosha_scores || (@recent_quiz_results && @recent_quiz_results[:dosha_scores])
   dosha_percentages = @dosha_percentages || (@recent_quiz_results && @recent_quiz_results[:dosha_percentages])
   primary_dosha_name = @primary_dosha_name || (@recent_quiz_results && @recent_quiz_results[:primary_dosha])
   secondary_dosha_name = @secondary_dosha_name || (@recent_quiz_results && @recent_quiz_results[:secondary_dosha])
   completed_at = @recent_quiz_results && @recent_quiz_results[:completed_at]
   
   # If we have scores but no percentages, calculate them
   if dosha_scores.present? && dosha_percentages.blank?
     total = dosha_scores.values.sum.to_f
     dosha_percentages = {}
     dosha_scores.each do |dosha, score|
       dosha_percentages[dosha.to_s.capitalize] = total > 0 ? ((score / total) * 100).round : 0
     end
   end
%>

<% if dosha_scores.present? && dosha_percentages.present? %>
  <div class="bg-green-50 border-l-4 border-green-500 p-4 mb-8 rounded-r-lg">
    <div class="flex">
      <div class="flex-shrink-0">
        <svg class="h-5 w-5 text-green-500" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
        </svg>
      </div>
      <div class="ml-3 w-full">
        <h3 class="text-sm font-medium text-green-800">Your quiz results are ready!</h3>
        <div class="mt-2 text-sm text-green-700">
          <p>Primary Dosha: <span class="font-semibold"><%= primary_dosha_name&.to_s&.titleize || 'Not determined' %></span></p>
          <% if secondary_dosha_name.present? %>
            <p>Secondary Dosha: <span class="font-semibold"><%= secondary_dosha_name.to_s.titleize %></span></p>
          <% end %>
          
          <div class="mt-4">
            <h4 class="font-semibold mb-2">Your Dosha Scores:</h4>
            <div class="space-y-3">
              <% dosha_percentages.sort_by { |_, v| -v }.each do |dosha, percentage| %>
                <div>
                  <div class="flex justify-between text-sm mb-1">
                    <span class="capitalize font-medium"><%= dosha %></span>
                    <span class="font-semibold"><%= percentage %>%</span>
                  </div>
                  <div class="w-full bg-gray-200 rounded-full h-2.5">
                    <div class="bg-green-500 h-2.5 rounded-full" style="width: <%= percentage %>%"></div>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
          
          <% if completed_at %>
            <div class="mt-4 pt-2 border-t border-green-100">
              <p class="text-xs text-green-600">Completed: <%= completed_at.strftime('%B %d, %Y at %I:%M %p') %></p>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
<% end %>
