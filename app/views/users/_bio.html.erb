<%= turbo_frame_tag "user-bio" do %>
  <div class="w-full mb-6" data-controller="inline-edit">
    <div data-inline-edit-target="view">
      <div class="flex items-start justify-between mb-4 sm:mb-4">
        <div class="flex-1 mr-4">
          <div class="space-y-3">
            <div>
              <p class="text-base leading-relaxed">
                <%= user.bio.presence || "Welcome to my profile! I'm passionate about holistic health and Ayurveda." %>
              </p>
            </div>
            <% if user.location.present? %>
              <div class="flex items-center text-sm text-gray-600">
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                </svg>
                <%= user.location %>
              </div>
            <% end %>
          </div>
        </div>
        <!-- Desktop Edit Profile Button -->
        <button type="button" class="hidden sm:inline-flex btn btn-sm btn-outline flex-shrink-0 items-center" data-action="inline-edit#edit">
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
          </svg>
          <span>Edit profile</span>
        </button>
      </div>
    
      <!-- Mobile Edit Profile Button - Bottom Row -->
      <div class="flex items-center justify-between text-sm text-gray-500 sm:hidden">
        <div class="flex items-center">
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
          </svg>
          Joined <%= user.created_at.strftime('%B %Y') %>
        </div>
        <button type="button" class="btn btn-sm btn-outline" data-action="inline-edit#edit">
          <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
          </svg>
          Edit
        </button>
      </div>
    </div>
    <%= render "users/bio_form", user: user %>
  </div>
<% end %>


