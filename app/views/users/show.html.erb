<% content_for :main_container_class, 'w-full p-0' %>

<div class="min-h-screen bg-base-200 -mt-5">

  <div class="w-full max-w-7xl mx-auto py-8 pl-16 pr-3 sm:pl-20 sm:pr-2 lg:pl-32 lg:pr-2">

    <!-- Page Header Div -->
    <div class="flex flex-col lg:flex-row gap-6 justify-center">
      <div class="w-full lg:w-3/4">
        <h1 class="text-3xl font-black mb-7 mt-4">Your Health Results</h1>
      </div>
      <div class="w-full lg:w-1/4"></div> <!-- Empty div for right column spacing -->
    </div>

    <!-- Main section -->
    <div class="flex flex-col lg:flex-row gap-12 justify-center">
      <div class="w-full lg:w-4/5 space-y-6">
        <%= render 'recent_quiz_results' if @recent_quiz_results %>
        <%= render 'dosha_scores' %>
        <%= render 'original_nature' %>
        <%= render 'dosha_info_tabs' %>
        <%= render 'symptoms' %>
        <%= render 'disease_timeline' %>
        <%= render 'recommendation_cards' %>
        <%= render 'symptoms_lister' %>
        <%= render 'symptoms_intake' %>
        <%= render 'sign_up_inline_form' %>
      </div>

      <!-- Sidebar section -->
      <div class="w-full lg:w-1/3 space-y-6">
        <%= render 'health_diary' %>
        <div class="sticky top-20">
          <%= render 'shared/book_practitioner_cta' %>
        </div>
      </div>
    </div>

    <!-- Full width sections below -->
    <div class="space-y-10 w-full">
      <div class="w-full max-w-5xl mx-auto">
      </div>
    </div>
  </div>
</div>
