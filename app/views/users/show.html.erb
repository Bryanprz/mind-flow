<% content_for :main_container_class, 'min-h-screen bg-base-200' %>

<div class="max-w-2xl mx-auto pb-6">
  <!-- Cover Photo Section -->
  <div class="relative">
    <div class="h-48 w-full cursor-pointer group relative overflow-hidden" 
         data-controller="cover-image-upload" 
         data-cover-image-upload-user-id-value="<%= @user.id %>" 
         data-action="click->cover-image-upload#selectFile dragover->cover-image-upload#dragOver dragleave->cover-image-upload#dragLeave drop->cover-image-upload#drop">
      <% if @user.cover_image.attached? %>
        <%= image_tag @user.cover_image, class: "w-full h-full object-cover" %>
      <% else %>
        <div class="h-full bg-gradient-to-r from-blue-500 to-purple-600 flex items-center justify-center">
          <div class="text-white text-center">
            <svg class="w-12 h-12 mx-auto mb-2 opacity-50" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
            </svg>
            <p class="text-sm opacity-75">Click to upload cover photo</p>
          </div>
        </div>
      <% end %>
      <input type="file" accept="image/*" class="hidden" data-cover-image-upload-target="fileInput" data-action="change->cover-image-upload#uploadFile">
      <div data-cover-image-upload-target="progress" class="absolute inset-0 bg-black bg-opacity-75 flex items-center justify-center text-white text-lg font-bold opacity-0 transition-opacity duration-200">0%</div>
      <!-- Upload overlay on hover -->
      <div class="absolute inset-0 bg-black bg-opacity-0 group-hover:bg-opacity-30 transition-all duration-200 flex items-center justify-center">
        <div class="opacity-0 group-hover:opacity-100 transition-opacity duration-200">
          <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
          </svg>
        </div>
      </div>
    </div>
    
    <!-- Profile Picture -->
    <div class="absolute -bottom-16 left-6">
      <div class="avatar" data-controller="avatar-upload" data-avatar-upload-user-id-value="<%= @user.id %>" data-action="click->avatar-upload#selectFile dragover->avatar-upload#dragOver dragleave->avatar-upload#dragLeave drop->avatar-upload#drop">
        <div class="w-32 h-32 rounded-full ring-4 ring-white relative overflow-hidden group cursor-pointer">
          <% if @user.avatar.attached? %>
            <%= image_tag @user.avatar, class: "w-full h-full object-cover" %>
          <% else %>
            <div class="w-full h-full bg-gray-300 text-gray-600 flex items-center justify-center text-4xl font-semibold">
              <%= @user.name[0].upcase %>
            </div>
          <% end %>
          <input type="file" accept="image/*" class="hidden" data-avatar-upload-target="fileInput" data-action="change->avatar-upload#uploadFile">
        </div>
        <div data-avatar-upload-target="progress" class="absolute inset-0 bg-blue-500 bg-opacity-75 flex items-center justify-center text-white text-lg font-bold opacity-0 transition-opacity duration-200">0%</div>
      </div>
    </div>
  </div>

  <!-- Profile Content -->
  <div class="bg-base-100 border border-gray-200 rounded-lg mt-16">
    <!-- Profile Header -->
    <div class="px-6 py-4 border-b border-gray-200">
      <div class="flex justify-between items-start">
        <div class="flex-1">
          <h1 class="text-2xl font-bold text-gray-900"><%= @user.name %></h1>
          <p class="text-gray-500 text-sm">
            <% if @user.handle.present? %>
              @<%= @user.handle %>
            <% else %>
              @<%= @user.name.downcase.gsub(/\s+/, '') %>
            <% end %>
          </p>
          
          <% if @primary_dosha %>
            <div class="mt-2 flex justify-start">
              <span class="inline-flex items-center py-1 rounded-full text-sm font-medium <%= dosha_color_class(@primary_dosha) %>">
                <%= @primary_dosha.name.titleize %> Dosha
              </span>
            </div>
          <% end %>
        </div>
        
        <!-- Action Buttons -->
        <div class="flex flex-col sm:flex-row space-y-2 sm:space-y-0 sm:space-x-2">
          <button class="px-4 py-2 text-sm font-medium text-gray-700 bg-ghost border border-gray-300 rounded-lg hover:bg-info focus:outline-none focus:ring-2 focus:ring-blue-500">
            <svg class="w-4 h-4 mr-2 inline" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
            </svg>
            Message
          </button>
          <button class="px-4 py-2 text-sm font-medium text-white bg-primary rounded-lg hover:bg-secondary focus:outline-none focus:ring-2 focus:ring-blue-500">
            <svg class="w-4 h-4 mr-2 inline" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m13.5-9a2.5 2.5 0 11-5 0 2.5 2.5 0 015 0z"></path>
            </svg>
            Connect
          </button>
        </div>
      </div>
    </div>

    <!-- Bio and Location Section -->
    <div class="px-6 py-4">
      <%= render "users/bio", user: @user %>
      
      <!-- Additional Info - Desktop Only -->
      <div class="hidden sm:flex items-center space-x-6 text-sm text-gray-500 mt-4">
        <div class="flex items-center">
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
          </svg>
          Joined <%= @user.created_at.strftime('%B %Y') %>
        </div>
      </div>
    </div>

    <!-- Stats Section -->
    <div class="px-6 py-4 border-t border-gray-200">
      <div class="flex space-x-8">
        <div class="text-center">
          <div class="text-2xl font-bold text-gray-900">1,234</div>
          <div class="text-sm text-gray-500">Posts</div>
        </div>
        <div class="text-center">
          <div class="text-2xl font-bold text-gray-900">5.6K</div>
          <div class="text-sm text-gray-500">Followers</div>
        </div>
        <div class="text-center">
          <div class="text-2xl font-bold text-gray-900">789</div>
          <div class="text-sm text-gray-500">Following</div>
        </div>
        <div class="text-center">
          <div class="text-2xl font-bold text-gray-900">83%</div>
          <div class="text-sm text-gray-500">Progress</div>
        </div>
      </div>
    </div>

    <!-- Navigation Tabs -->
    <div class="border-t border-gray-200">
      <nav class="flex space-x-8 px-6">
        <a href="#" class="py-4 px-1 border-b-2 border-blue-500 text-blue-600 font-medium text-sm">Posts</a>
        <a href="#" class="py-4 px-1 border-b-2 border-transparent text-gray-500 hover:text-gray-700 font-medium text-sm">Media</a>
        <a href="#" class="py-4 px-1 border-b-2 border-transparent text-gray-500 hover:text-gray-700 font-medium text-sm">Likes</a>
        <a href="#" class="py-4 px-1 border-b-2 border-transparent text-gray-500 hover:text-gray-700 font-medium text-sm">Bookmarks</a>
      </nav>
    </div>
  </div>

  <!-- Ayurvedic Profile Section -->
  <% if @primary_dosha %>
    <div class="bg-base-100 border border-gray-200 rounded-lg mt-6">
      <div class="px-6 py-4 border-b border-gray-200">
        <h3 class="text-lg font-semibold text-gray-900">Your Ayurvedic Profile</h3>
      </div>
      <div class="px-6 py-4">
        <div class="prose max-w-none">
          <p class="text-gray-700 mb-4"><%= t("doshas.#{@primary_dosha.name.downcase}.description") %></p>
          
          <div class="grid md:grid-cols-2 gap-6">
            <div>
              <h4 class="text-base font-semibold text-gray-900 mb-2">Key Characteristics</h4>
              <ul class="space-y-1 text-sm text-gray-700">
                <% t("doshas.#{@primary_dosha.name.downcase}.bullet_points").each do |point| %>
                  <li class="flex items-start">
                    <svg class="w-4 h-4 text-green-500 mr-2 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                    </svg>
                    <%= point %>
                  </li>
                <% end %>
              </ul>
            </div>
            
            <div class="space-y-3">
              <div>
                <span class="text-sm font-medium text-gray-900">When Balanced:</span>
                <p class="text-sm text-gray-700"><%= t("doshas.#{@primary_dosha.name.downcase}.in_balance") %></p>
              </div>
              <div>
                <span class="text-sm font-medium text-gray-900">When Unbalanced:</span>
                <p class="text-sm text-gray-700"><%= t("doshas.#{@primary_dosha.name.downcase}.out_of_balance") %></p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% else %>
    <div class="bg-blue-50 border border-blue-200 rounded-lg mt-6 p-4">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-blue-400" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"></path>
          </svg>
        </div>
        <div class="ml-3">
          <p class="text-sm text-blue-700">
            Complete your Ayurvedic assessment to discover your dosha profile and get personalized health recommendations.
          </p>
        </div>
      </div>
    </div>
  <% end %>
</div>
