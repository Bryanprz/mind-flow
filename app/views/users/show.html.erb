<div class="container mx-auto px-4 py-8 space-y-10">
  <!-- Original Nature Card -->
  <div class="card bg-base-100 border border-gray-200 shadow-lg mb-8">
    <div class="card-header bg-base-100 border-b border-base-300 p-6 rounded-t-lg">
      <h1 class="card-title text-base-content text-3xl font-bold">Original Nature</h1>
    </div>
    <div class="card-body flex flex-col md:flex-row items-center md:items-stretch gap-8">
      <!-- Running Person Image -->
      <div class="flex flex-col items-center justify-center md:w-1/2">
        <img src="https://images.unsplash.com/photo-1506744038136-46273834b3fb?auto=format&fit=facearea&w=320&h=320&q=80" alt="Person running" class="rounded-xl w-48 h-48 object-cover mb-4 shadow" />
        <!-- 5 Elements in a row below image -->
        <div class="flex justify-center gap-4 mt-2">
          <% elements = [
            {name: 'Space', icon: 'ðŸŒŒ'},
            {name: 'Air', icon: 'ðŸ’¨'},
            {name: 'Fire', icon: 'ðŸ”¥'},
            {name: 'Water', icon: 'ðŸ’§'},
            {name: 'Earth', icon: 'ðŸŒ'}
          ] %>
          <% user_strong_elements = @user&.strong_elements || ['Fire', 'Air'] %>
          <% elements.each do |el| %>
            <div class="tooltip" data-tip="<%= el[:name] %>">
              <span class="text-3xl <%= user_strong_elements.include?(el[:name]) ? 'ring-2 ring-primary rounded-full' : 'opacity-60' %>"><%= el[:icon] %></span>
            </div>
          <% end %>
        </div>
      </div>
      <!-- Subtitle, paragraph, button -->
      <div class="flex flex-col justify-center md:w-1/2">
        <h2 class="text-xl font-semibold mb-2">Your Elemental Archetype</h2>
        <p class="mb-4 text-base-content/80">Your unique combination of the five elements shapes your mind, body, and spirit. Understanding your original nature helps you live in harmony with your true self and the world around you.</p>
        <button class="btn btn-accent w-fit">Learn More</button>
      </div>
    </div>
  </div>

  <!-- Symptom Experience Card -->
  <div class="card bg-base-100 border border-gray-200 shadow-lg mb-8">
    <div class="card-header bg-base-100 border-b border-base-300 p-6 rounded-t-lg">
      <h2 class="card-title text-base-content text-2xl font-bold">What Symptom Are You Experiencing?</h2>
    </div>
    <div class="card-body flex flex-col md:flex-row items-center md:items-stretch gap-8">
      <!-- Elements Row (reuse) -->
      <div class="flex flex-col items-center justify-center md:w-1/2">
        <div class="flex justify-center gap-4 mb-4">
          <% elements.each do |el| %>
            <div class="tooltip" data-tip="<%= el[:name] %>">
              <span class="text-3xl <%= user_strong_elements.include?(el[:name]) ? 'ring-2 ring-primary rounded-full' : 'opacity-60' %>"><%= el[:icon] %></span>
            </div>
          <% end %>
        </div>
        <div class="avatar placeholder w-32 h-32 bg-primary/20 flex items-center justify-center rounded-full">
          <img src="/icon.png" alt="Avatar" class="w-24 h-24 object-contain" />
        </div>
      </div>
      <!-- Stages of Disease Table/Chart -->
      <div class="md:w-1/2 w-full">
        <h3 class="text-lg font-semibold mb-4">6 Stages of Disease</h3>
        <div class="overflow-x-auto">
          <table class="table w-full">
            <thead>
              <tr>
                <th>Stage</th>
                <th>Symptoms</th>
              </tr>
            </thead>
            <tbody>
              <% stages = [
                {name: 'Accumulation', symptoms: ['Bloating', 'Mild fatigue']},
                {name: 'Aggravation', symptoms: ['Heartburn', 'Mild pain']},
                {name: 'Overflow', symptoms: ['Headache', 'Rash']},
                {name: 'Relocation', symptoms: ['Joint pain', 'Muscle ache']},
                {name: 'Manifestation', symptoms: ['Chronic pain', 'Digestive issues']},
                {name: 'Complication', symptoms: ['Arthritis', 'Ulcer']}
              ] %>
              <% user_symptoms = @user&.symptoms || ['Bloating', 'Headache'] %>
              <% stages.each do |stage| %>
                <tr>
                  <td class="font-semibold"><%= stage[:name] %></td>
                  <td>
                    <% stage[:symptoms].each do |symptom| %>
                      <% is_active = user_symptoms.include?(symptom) %>
                      <span
                        class="badge badge-lg badge-accent mr-2 mb-2 cursor-pointer transition <%= is_active ? 'text-black font-bold' : 'text-accent/60' %>"
                        data-symptom="<%= symptom %>"
                        data-active="<%= is_active %>"
                        title="Short definition. Click for more info."
                        onclick="toggleSymptom(this)"
                        onmouseover="showSymptomTooltip(this)"
                        onmouseout="hideSymptomTooltip(this)"
                      >
                        <%= symptom %>
                      </span>
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
        <!-- TODO: Add JS for toggling symptoms, tooltips, and modal opening -->
      </div>
    </div>
  </div>

