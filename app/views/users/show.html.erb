<% content_for :main_container_class, 'min-h-screen bg-base-200' %>

<div class="max-w-2xl mx-auto pb-6">
  <!-- Cover Photo Section -->
  <div class="relative">
    <div class="h-48 w-full cursor-pointer group relative overflow-hidden" 
         data-controller="cover-image-upload" 
         data-cover-image-upload-user-id-value="<%= @user.id %>" 
         data-action="click->cover-image-upload#selectFile dragover->cover-image-upload#dragOver dragleave->cover-image-upload#dragLeave drop->cover-image-upload#drop">
      <% if @user.cover_image.attached? %>
        <%= image_tag @user.cover_image, class: "w-full h-full object-cover" %>
      <% else %>
        <div class="h-full bg-gradient-to-r from-blue-500 to-purple-600 flex items-center justify-center">
          <div class="text-white text-center">
            <svg class="w-12 h-12 mx-auto mb-2 opacity-50" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
            </svg>
            <p class="text-sm opacity-75">Click to upload cover photo</p>
          </div>
        </div>
      <% end %>
      <input type="file" accept="image/*" class="hidden" data-cover-image-upload-target="fileInput" data-action="change->cover-image-upload#uploadFile">
      <div data-cover-image-upload-target="progress" class="absolute inset-0 bg-black bg-opacity-75 flex items-center justify-center text-white text-lg font-bold opacity-0 transition-opacity duration-200">0%</div>
      <!-- Upload overlay on hover -->
      <div class="absolute inset-0 bg-black bg-opacity-0 group-hover:bg-opacity-30 transition-all duration-200 flex items-center justify-center">
        <div class="opacity-0 group-hover:opacity-100 transition-opacity duration-200">
          <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
          </svg>
        </div>
      </div>
    </div>
    
    <!-- Profile Picture -->
    <div class="absolute -bottom-16 left-6">
      <div class="avatar group" data-controller="avatar-upload" data-avatar-upload-user-id-value="<%= @user.id %>" data-action="click->avatar-upload#selectFile dragover->avatar-upload#dragOver dragleave->avatar-upload#dragLeave drop->avatar-upload#drop">
        <div class="w-32 h-32 rounded-full ring-4 ring-white relative overflow-hidden cursor-pointer">
          <% if @user.avatar.attached? %>
            <%= image_tag @user.avatar, class: "w-full h-full object-cover" %>
          <% else %>
            <div class="w-full h-full bg-gray-300 text-gray-600 flex items-center justify-center text-4xl font-semibold">
              <%= @user.name[0].upcase %>
            </div>
          <% end %>
          <input type="file" accept="image/*" class="hidden" data-avatar-upload-target="fileInput" data-action="change->avatar-upload#uploadFile">
          <!-- Upload overlay on hover -->
          <div class="absolute inset-0 bg-black bg-opacity-0 group-hover:bg-opacity-30 transition-all duration-200 flex items-center justify-center z-10">
            <div class="opacity-0 group-hover:opacity-100 transition-opacity duration-200">
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
              </svg>
            </div>
          </div>
        </div>
        <div data-avatar-upload-target="progress" class="absolute inset-0 bg-blue-500 bg-opacity-75 flex items-center justify-center text-white text-lg font-bold opacity-0 transition-opacity duration-200 z-20">0%</div>
      </div>
    </div>
  </div>

  <!-- Profile Content -->
  <div class="bg-base-100 border border-gray-200 sm:rounded-lg mt-16">
    <!-- Profile Header -->
    <div class="px-6 py-4 border-b border-gray-200">
      <%= render "users/profile_header", user: @user, primary_dosha: @primary_dosha %>
    </div>

    <!-- Bio and Location Section -->
    <div class="px-6 py-4">
      <%= render "users/bio", user: @user %>
      
      <!-- Additional Info - Desktop Only -->
      <div class="hidden sm:flex items-center space-x-6 text-sm text-gray-500 mt-4">
        <div class="flex items-center">
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
          </svg>
          Joined <%= @user.created_at.strftime('%B %Y') %>
        </div>
      </div>
    </div>

    <!-- Stats Section -->
    <div class="px-6 py-4 border-t border-gray-200">
      <div class="flex space-x-8">
        <div class="text-center">
          <div class="text-2xl font-bold text-gray-900"><%= @user.social_posts_count %></div>
          <div class="text-sm text-gray-500">Posts</div>
        </div>
        <div class="text-center">
          <div class="text-2xl font-bold text-gray-900"><%= @user.assessment_count %></div>
          <div class="text-sm text-gray-500">Assessments</div>
        </div>
        <div class="text-center">
          <div class="text-2xl font-bold text-gray-900"><%= @user.healing_plans_count %></div>
          <div class="text-sm text-gray-500">Plans</div>
        </div>
        <div class="text-center">
          <div class="text-2xl font-bold text-gray-900"><%= @user.longest_streak %></div>
          <div class="text-sm text-gray-500">Longest Streak</div>
        </div>
      </div>
    </div>

    <!-- Wellness Score & Achievements -->
    <div class="px-6 py-4 border-t border-gray-200">
      <div class="flex items-center justify-between mb-4">
        <div>
          <h3 class="text-lg font-semibold text-gray-900">Wellness Journey</h3>
          <p class="text-sm text-gray-600"><%= @user.healing_mastery_level %> Level</p>
        </div>
        <div class="text-right">
          <div class="text-2xl font-bold text-blue-600"><%= @user.wellness_score %></div>
          <div class="text-sm text-gray-500">Wellness Score</div>
        </div>
      </div>
      
      <!-- Achievements -->
      <div class="flex flex-wrap gap-2">
        <% if @user.has_completed_assessments? %>
          <span class="inline-flex items-center px-3 py-1 sm:rounded-full text-xs font-medium bg-green-100 text-green-800">
            <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
            </svg>
            Assessment Complete
          </span>
        <% end %>
        
        <% if @user.has_streak? %>
          <span class="inline-flex items-center px-3 py-1 sm:rounded-full text-xs font-medium bg-orange-100 text-orange-800">
            <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
            </svg>
            <%= @user.current_streak %>-Day Streak
          </span>
        <% end %>
        
        <% if @user.longest_streak > @user.current_streak %>
          <span class="inline-flex items-center px-3 py-1 sm:rounded-full text-xs font-medium bg-purple-100 text-purple-800">
            <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
              <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
            </svg>
            Best: <%= @user.longest_streak %> Days
          </span>
        <% end %>
        
        <% if @user.has_social_posts? %>
          <span class="inline-flex items-center px-3 py-1 sm:rounded-full text-xs font-medium bg-blue-100 text-blue-800">
            <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
              <path d="M13 6a3 3 0 11-6 0 3 3 0 016 0zM18 8a2 2 0 11-4 0 2 2 0 014 0zM14 15a4 4 0 00-8 0v3h8v-3z"></path>
            </svg>
            Community Member
          </span>
        <% end %>
        
        <% if @user.has_healing_plans? %>
          <span class="inline-flex items-center px-3 py-1 sm:rounded-full text-xs font-medium bg-indigo-100 text-indigo-800">
            <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M6.267 3.455a3.066 3.066 0 001.745-.723 3.066 3.066 0 013.976 0 3.066 3.066 0 001.745.723 3.066 3.066 0 012.812 2.812c.051.643.304 1.254.723 1.745a3.066 3.066 0 010 3.976 3.066 3.066 0 00-.723 1.745 3.066 3.066 0 01-2.812 2.812 3.066 3.066 0 00-1.745.723 3.066 3.066 0 01-3.976 0 3.066 3.066 0 00-1.745-.723 3.066 3.066 0 01-2.812-2.812 3.066 3.066 0 00-.723-1.745 3.066 3.066 0 010-3.976 3.066 3.066 0 00.723-1.745 3.066 3.066 0 012.812-2.812zm7.44 5.252a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
            </svg>
            Healing Plans
          </span>
        <% end %>
      </div>
    </div>

    <!-- Navigation Tabs -->
    <div class="border-t border-gray-200">
      <nav class="flex space-x-8 px-6">
        <a href="#" class="py-4 px-1 border-b-2 border-blue-500 text-blue-600 font-medium text-sm">Posts</a>
        <a href="#" class="py-4 px-1 border-b-2 border-transparent text-gray-500 hover:text-gray-700 font-medium text-sm">Media</a>
        <a href="#" class="py-4 px-1 border-b-2 border-transparent text-gray-500 hover:text-gray-700 font-medium text-sm">Likes</a>
        <a href="#" class="py-4 px-1 border-b-2 border-transparent text-gray-500 hover:text-gray-700 font-medium text-sm">Bookmarks</a>
      </nav>
    </div>
  </div>

  <!-- Ayurvedic Profile Section -->
  <% if @primary_dosha %>
    <div class="bg-base-100 border border-gray-200 sm:rounded-lg mt-6">
      <div class="px-6 py-4 border-b border-gray-200">
        <h3 class="text-lg font-semibold text-gray-900">Your Ayurvedic Profile</h3>
      </div>
      <div class="px-6 py-4">
        <div class="prose max-w-none">
          <p class="text-gray-700 mb-4"><%= t("doshas.#{@primary_dosha.name.downcase}.description") %></p>
          
          <div class="grid md:grid-cols-2 gap-6">
            <div>
              <h4 class="text-base font-semibold text-gray-900 mb-2">Key Characteristics</h4>
              <ul class="space-y-1 text-sm text-gray-700">
                <% t("doshas.#{@primary_dosha.name.downcase}.bullet_points").each do |point| %>
                  <li class="flex items-start">
                    <svg class="w-4 h-4 text-green-500 mr-2 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                    </svg>
                    <%= point %>
                  </li>
                <% end %>
              </ul>
            </div>
            
            <div class="space-y-3">
              <div>
                <span class="text-sm font-medium text-gray-900">When Balanced:</span>
                <p class="text-sm text-gray-700"><%= t("doshas.#{@primary_dosha.name.downcase}.in_balance") %></p>
              </div>
              <div>
                <span class="text-sm font-medium text-gray-900">When Unbalanced:</span>
                <p class="text-sm text-gray-700"><%= t("doshas.#{@primary_dosha.name.downcase}.out_of_balance") %></p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% else %>
    <div class="bg-blue-50 border border-blue-200 sm:rounded-lg mt-6 p-4">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-blue-400" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"></path>
          </svg>
        </div>
        <div class="ml-3">
          <p class="text-sm text-blue-700">
            Complete your Ayurvedic assessment to discover your dosha profile and get personalized health recommendations.
          </p>
        </div>
      </div>
    </div>
  <% end %>

</div>
