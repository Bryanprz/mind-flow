<div class="max-w-2xl mx-auto px-4 py-6">
  <div class="flex items-center gap-3 mb-6">
    <svg class="w-6 h-6 text-blue-500" fill="currentColor" viewBox="0 0 24 24">
      <path d="M5 5a2 2 0 012-2h10a2 2 0 012 2v16l-7-3.5L5 21V5z"></path>
    </svg>
    <h1 class="text-2xl font-bold">Your Saved Posts</h1>
    <% if @saved_posts.any? %>
      <span class="badge badge-primary badge-sm"><%= @saved_posts.count %></span>
    <% end %>
  </div>

  <% if @saved_posts.any? %>
    <div class="space-y-4">
      <% @saved_posts.each do |saved_post| %>
        <%= render 'social_posts/social_post', social_post: saved_post %>
      <% end %>
    </div>
  <% else %>
    <div class="text-center py-12">
      <svg class="w-16 h-16 text-gray-300 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 5a2 2 0 012-2h10a2 2 0 012 2v16l-7-3.5L5 21V5z"></path>
      </svg>
      <h3 class="text-lg font-medium text-gray-900 mb-2">No saved posts yet</h3>
      <p class="text-gray-500 mb-4">Posts you save will appear here for easy access later.</p>
      <%= link_to "Explore Community", community_path, class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
