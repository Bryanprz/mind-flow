<div class="flex flex-col h-full">
  <%= form_with(url: session_path, local: true, data: { turbo: false }, class: "flex flex-col h-full") do |f| %>
    <div class="text-center mb-6">
      <h3 class="text-2xl font-bold text-neutral-content mt-7">Login</h3>
      <p class="text-gray-300 mt-2">Sign in with your email and password</p>
      
      <% if flash[:alert].present? %>
        <div class="alert alert-error mt-4">
          <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>
          <span><%= flash[:alert] %></span>
        </div>
      <% end %>
    </div>

    <div class="space-y-4">
      <div class="form-control">
        <%= f.email_field :email_address, 
          name: 'email_address',
          class: "input input-bordered w-full bg-white text-gray-800", 
          placeholder: "Email",
          required: true,
          autocomplete: "email",
          value: params[:email_address] %>
      </div>

      <div class="form-control">
        <%= f.password_field :password, 
          name: 'password',
          class: "input input-bordered w-full bg-white text-gray-800", 
          placeholder: "Password",
          required: true,
          autocomplete: "current-password" %>
      </div>
    </div>

    <div class="mt-7 pt-4">
      <div class="form-control">
        <%= f.submit "Login", class: "btn btn-primary w-full" %>

        <div class="divider text-gray-400 text-sm mt-4">OR</div>

        <div class="text-center pt-2">
          <p class="text-gray-300">
            <%= link_to "Forgot password?", new_password_path, 
                class: "text-primary hover:underline font-medium" %>
          </p>
        </div>
      </div>
    </div>
  <% end %>
</div>
