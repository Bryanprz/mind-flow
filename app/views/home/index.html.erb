  backdrop-filter: blur(10px);
  border-radius: 10px;
  max-width: fit-content;
  white-space: nowrap;
}

.meditation-figure {
  width: 200px;
  height: 200px;
  background: radial-gradient(circle, #4a5568 30%, #2d3748 70%);
  border-radius: 50%;
  position: relative;
  margin: 0 auto;
  display: flex;
  align-items: center;
  justify-content: center;
}

.meditation-head {
  width: 80px;
  height: 80px;
  background: radial-gradient(circle, #e2e8f0 40%, #cbd5e0 80%);
  border-radius: 50%;
  position: relative;
}

.meditation-head::before {
  content: '';
  position: absolute;
  top: 20px;
  left: 20px;
  width: 20px;
  height: 3px;
  background: #4a5568;
  border-radius: 2px;
}

.meditation-head::after {
  content: '';
  position: absolute;
  top: 25px;
  right: 20px;
  width: 20px;
  height: 3px;
  background: #4a5568;
  border-radius: 2px;
}

.meditation-body {
  position: absolute;
  bottom: 40px;
  width: 60px;
  height: 80px;
  background: linear-gradient(to bottom, #4a5568 0%, #2d3748 100%);
