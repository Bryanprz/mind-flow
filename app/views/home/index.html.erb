        <% if Current.user&.habit_plans.any? %>
          <%= link_to "Continue Your Journey", dashboard_path, class: "btn btn-ghost btn-lg text-primary border-2 border-primary hover:bg-primary hover:text-white px-8 py-4 text-lg font-semibold" %>
        <% else %>
