<% content_for :main_container_class, 'min-h-screen bg-base-200' %>

<div class="max-w-4xl mx-auto p-6">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-2xl font-bold">Private Messages</h1>
    <%= link_to "🏠 Public Rooms", rooms_path, 
        class: "btn btn-outline" %>
  </div>
  
  <!-- Private Rooms List -->
  <div class="space-y-4">
    <% if @private_rooms.any? %>
      <% @private_rooms.each do |room| %>
        <div class="bg-white rounded-lg shadow p-4 hover:shadow-md transition-shadow">
          <%= link_to room_path(room), class: "block" do %>
            <div class="flex justify-between items-start">
              <div>
                <h3 class="font-semibold text-lg"><%= room.name %></h3>
                <p class="text-xs text-gray-500">
                  Private conversation
                </p>
              </div>
              <div class="text-right">
                <% if room.last_message %>
                  <p class="text-sm text-gray-600 truncate max-w-xs">
                    <%= room.last_message.content.to_plain_text.truncate(50) %>
                  </p>
                  <p class="text-xs text-gray-500">
                    <%= time_ago_in_words(room.last_message.created_at) %> ago
                  </p>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>
    <% else %>
      <div class="bg-white rounded-lg shadow p-8 text-center">
        <div class="text-gray-500">
          <svg class="w-16 h-16 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
          </svg>
          <h3 class="text-lg font-semibold mb-2">No private conversations yet</h3>
          <p class="text-gray-600">Start a conversation by visiting someone's profile and clicking "Send Private Message"</p>
        </div>
      </div>
    <% end %>
  </div>
</div>
