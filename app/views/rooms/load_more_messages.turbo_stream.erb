<%= turbo_stream.prepend "messages" do %>
  <%= render partial: "messages/message", collection: @older_messages.reverse %>
<% end %>

<%= turbo_stream.replace "load_more_trigger" do %>
  <%= render "messages/load_more_trigger", 
      has_more_messages: @has_more_messages, 
      room: @room,
      last_message_id: @older_messages.last&.id %>
<% end %>
