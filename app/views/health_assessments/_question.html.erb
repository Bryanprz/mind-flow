<turbo-frame id="assessment_frame">
  <% content_for :main_container_class, "bg-base-200" %>
  <div class="max-w-lg sm:max-w-full flex flex-col items-center justify-center min-h-[calc(100vh-10rem)] px-4 py-8">
    <div class="card card-border max-w-full bg-neutral p-8 flex flex-col min-h-[38rem] w-full max-w-sm sm:max-w-[40rem] mx-auto" style="color:#d2d3c8;"
         data-controller="assessment"
         data-assessment-questions-value="<%= questions.to_json(include: :assessment_options) %>"
         data-assessment-answers-value="[]">
         
      <!-- Progress Bar -->
      <div class="w-full bg-gray-200 rounded-full h-2.5 mb-6">
        <div class="bg-primary h-2.5 rounded-full" data-assessment-target="progressBar"></div>
      </div>
      <p class="text-sm text-right mb-4" data-assessment-target="progressText"></p>

      <!-- Question Area -->
      <div data-assessment-target="questionContainer">
        <h2 class="text-lg sm:text-2xl font-bold mb-8 mt-5 text-center min-h-20" data-assessment-target="questionText"></h2>
        <div class="grid grid-cols-1 gap-4" data-assessment-target="optionsContainer">
          <!-- Options will be rendered here by Stimulus -->
        </div>
      </div>

      <!-- Form for submission -->
      <%= form_with(
        url: health_assessment_submit_answers_path(questions.first.health_assessment_id),
        method: :post,
        class: "flex flex-col flex-grow",
        format: :turbo_stream
      ) do |form| %>
        <%= form.hidden_field :health_assessment_id, value: questions.first.health_assessment_id %>
        <%= form.hidden_field :answers, data: { assessment_target: "answers" } %>
      <% end %>

      <!-- Navigation -->
      <div class="flex justify-end items-center mt-auto mt-4 md:mt-auto">
        <div class="flex-1">
          <button data-action="click->assessment#back" 
                  data-assessment-target="backButton" 
                  class="rounded-md bg-base-500 text-white px-3.5 py-2.5 text-sm font-semibold focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-gray-400 hidden">
            Back
          </button>
        </div>
        
        <button data-action="click->assessment#next" 
                data-assessment-target="nextButton" 
                class="ml-4 rounded-md bg-primary text-white px-3.5 py-2.5 text-sm font-semibold focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-primary disabled:opacity-50 disabled:cursor-not-allowed" 
                disabled>
          Next
        </button>
      </div>
    </div>
  </div>
</turbo-frame>
