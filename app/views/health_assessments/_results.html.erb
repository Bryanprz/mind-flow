<turbo-frame id="main_content_area" class="transition-opacity duration-500 ease-in-out opacity-0" data-controller="transition">
  <div class="quiz-results-container flex flex-col items-center justify-center min-h-[calc(100vh-10rem)] px-4 py-8">
    <div class="w-full max-w-2xl bg-white p-8 rounded-lg shadow-lg border border-amber-100 text-center">
      <h2 class="text-3xl font-bold text-gray-800 mb-6">Your Ayurvedic Profile</h2>

      <% if primary_dosha.present? %>
        <p class="text-xl text-gray-700 mb-4">You are primarily a <span class="font-semibold text-amber-600"><%= primary_dosha.name.capitalize %></span> type.</p>
        
        <!-- Display Dosha Scores -->
        <div class="bg-amber-50 p-4 rounded-lg mb-8">
          <h3 class="text-xl font-semibold text-gray-800 mb-4">Your Dosha Scores:</h3>
          <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
            <% assessment_entry.dosha_scores.each do |dosha, score| %>
              <div class="bg-white p-4 rounded shadow">
                <h4 class="font-semibold text-gray-700"><%= dosha.to_s.capitalize %></h4>
                <div class="w-full bg-gray-200 rounded-full h-4 mt-2">
                  <div class="bg-amber-600 h-4 rounded-full" style="width: <%= (score.to_f / assessment_entry.assessment_answers.count * 100).round %>%">
                    <span class="text-xs text-white font-bold flex items-center justify-center h-full"><%= score %></span>
                  </div>
                </div>
                <p class="text-sm text-gray-600 mt-1"><%= (score.to_f / assessment_entry.assessment_answers.count * 100).round %>%</p>
              </div>
            <% end %>
          </div>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mt-8 text-left">
          <div>
            <h3 class="text-2xl font-semibold text-gray-800 mb-4"><%= primary_dosha.name.capitalize %> (Primary)</h3>
            <p class="text-gray-700 mb-4"><%= primary_dosha.core_qualities["description"] %></p>

            <h4 class="text-xl font-semibold text-gray-700 mb-2">Strengths:</h4>
            <ul class="list-disc list-inside text-gray-700 mb-4">
              <% primary_dosha.strengths.each do |strength| %>
                <li><%= strength %></li>
              <% end %>
            </ul>

            <h4 class="text-xl font-semibold text-gray-700 mb-2">Growth Areas:</h4>
            <ul class="list-disc list-inside text-gray-700">
              <% primary_dosha.growth_areas.each do |area| %>
                <li><%= area %></li>
              <% end %>
            </ul>
          </div>

          <% if secondary_dosha.present? %>
            <div>
              <h3 class="text-2xl font-semibold text-gray-800 mb-4"><%= secondary_dosha.name.capitalize %> (Secondary)</h3>
              <p class="text-gray-700"><%= secondary_dosha.core_qualities["description"] %></p>
            </div>
          <% end %>
        </div>

        <div class="mt-10">
          <%= link_to "See Your Personalized Lifestyle Plan", lifestyle_plans_path, class: "rounded-md bg-amber-600 px-3.5 py-2.5 text-sm font-semibold text-white shadow-sm hover:bg-amber-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-amber-600" %>
        </div>

      <% else %>
        <p class="text-xl text-gray-700 mb-4">Unable to determine your Ayurvedic profile at this time. Please try the assessment again.</p>
      <% end %>

      <% if !current_user %>
        <div class="mt-10">
          <h3 class="text-2xl font-semibold text-gray-800 mb-4">Save Your Results!</h3>
          <p class="text-gray-600 mb-6">Enter your details to save your personalized Ayurvedic profile and access more features.</p>

          <%= form_with url: create_user_from_assessment_path, method: :post, class: "max-w-md mx-auto" do |form| %>
            <%= form.hidden_field :assessment_entry_id, value: assessment_entry.id %>

            <div class="mb-4">
              <%= form.label :email, class: "block text-gray-700 text-sm font-bold mb-2" %>
              <%= form.email_field :email, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline", required: true %>
            </div>

            <div class="mb-4">
              <%= form.label :name, class: "block text-gray-700 text-sm font-bold mb-2" %>
              <%= form.text_field :name, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
            </div>

            <div class="mb-6">
              <%= form.label :password, class: "block text-gray-700 text-sm font-bold mb-2" %>
              <%= form.password_field :password, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline", required: true %>
            </div>

            <div class="flex items-center justify-between">
              <%= form.submit "Create Account & Save Results", class: "bg-amber-600 hover:bg-amber-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline cursor-pointer" %>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</turbo-frame>