<% content_for :main_container_class, 'bg-base-200' %>

<div class="container mx-auto px-4 py-8">
  <div class="max-w-4xl mx-auto">
    <!-- Header -->
    <div class="flex justify-between items-center mb-6">
      <div>
        <h1 class="text-3xl font-bold"><%= @healing_plan.name %></h1>
        <p class="text-lg text-gray-600">Healing Plan for <%= @user.name %></p>
      </div>
      <div class="flex gap-2">
        <%= link_to "Edit", edit_admin_user_healing_plan_path(@user, @healing_plan), class: "btn btn-primary btn-sm text-white" %>
        <%= link_to "Delete", admin_user_healing_plan_path(@user, @healing_plan), method: :delete,
                    class: "btn btn-error btn-sm text-white",
                    data: { confirm: "Are you sure you want to delete this healing plan?" } %>
      </div>
    </div>

    <!-- Plan Details -->
    <div class="card bg-base-100 border border-gray-300 mb-6">
      <div class="card-body">
        <h2 class="card-title text-xl mb-4">Plan Details</h2>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
          <div>
            <p class="text-sm text-gray-500">Duration Type</p>
            <p class="font-medium"><%= @healing_plan.duration_type.humanize %></p>
          </div>
          <div>
            <p class="text-sm text-gray-500">Status</p>
            <p class="font-medium">
              <% if @healing_plan.is_active? %>
                <span class="badge badge-success">Active</span>
              <% else %>
                <span class="badge badge-neutral">Inactive</span>
              <% end %>
            </p>
          </div>
          <div>
            <p class="text-sm text-gray-500">Created</p>
            <p class="font-medium"><%= @healing_plan.created_at.to_formatted_s(:long) %></p>
          </div>
        </div>
      </div>
    </div>

    <!-- Description -->
    <% if @healing_plan.description.present? %>
      <div class="card bg-base-100 border border-gray-300 mb-6">
        <div class="card-body">
          <h3 class="card-title text-lg mb-2">Description</h3>
          <div class="prose max-w-none text-sm">
            <%= @healing_plan.description %>
          </div>
        </div>
      </div>
    <% end %>

    <!-- Focus Areas & Goals -->
    <% if @healing_plan.overview.present? %>
      <div class="card bg-base-100 border border-gray-300 mb-6">
        <div class="card-body">
          <h3 class="card-title text-lg mb-4">Focus Areas & Goals</h3>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <% (0..3).each do |index| %>
              <% focus_area = @healing_plan.overview["focus_area_#{index}"] %>
              <% goal = @healing_plan.overview["goal_#{index}"] %>
              <% if focus_area.present? || goal.present? %>
                <div class="p-3 bg-gray-50 rounded-lg">
                  <h4 class="font-medium text-sm text-gray-600 mb-1">Focus Area <%= index + 1 %></h4>
                  <p class="font-medium mb-1"><%= focus_area %></p>
                  <% if goal.present? %>
                    <p class="text-sm text-gray-600"><strong>Goal:</strong> <%= goal %></p>
                  <% end %>
                </div>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>

    <!-- Plan Sections -->
    <div class="card bg-base-100 border border-gray-300 mb-6">
      <div class="card-body">
        <h3 class="card-title text-lg mb-4">Plan Sections</h3>
        
        <% if @healing_plan.sections.any? %>
          <div class="space-y-4">
            <% @healing_plan.sections.order(:position).each do |section| %>
              <div class="border border-gray-200 rounded-lg p-4">
                <div class="flex justify-between items-center mb-3">
                  <h4 class="font-semibold text-md"><%= section.name %></h4>
                  <span class="text-sm text-gray-500">
                    Position <%= section.position %> • 
                    <%= pluralize(section.plan_items.count, 'item') %>
                  </span>
                </div>

                <% if section.plan_items.any? %>
                  <div class="space-y-2">
                    <% section.plan_items.order(:position).each do |item| %>
                      <div class="flex items-start gap-3 p-2 bg-gray-50 rounded">
                        <span class="text-sm text-gray-500 mt-1"><%= item.position %>.</span>
                        <div class="flex-1">
                          <div class="prose prose-sm max-w-none">
                            <%= item.content %>
                          </div>
                        </div>
                      </div>
                    <% end %>
                  </div>
                <% else %>
                  <p class="text-gray-500 italic text-sm">No items in this section.</p>
                <% end %>
              </div>
            <% end %>
          </div>
        <% else %>
          <div class="text-center py-8 text-gray-500">
            <svg class="w-12 h-12 mx-auto mb-3 text-gray-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 13h6m-3-3v6m-9 1V7a2 2 0 012-2h6l2 2h6a2 2 0 012 2v8a2 2 0 01-2 2H5a2 2 0 01-2-2z"></path>
            </svg>
            <p>No plan sections created yet.</p>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Back Button -->
    <div class="mt-6">
      <%= link_to "← Back to #{@user.name}", admin_user_path(@user), class: "btn btn-ghost" %>
    </div>
  </div>
</div>