<% content_for :main_container_class, 'bg-base-200' %>

<div class="container mx-auto px-4 py-8">
  <div class="max-w-2xl mx-auto">
    <div class="card bg-base-100 border border-gray-300">
      <div class="card-body">
        <h1 class="card-title text-2xl mb-6">Edit Chronic Illness</h1>

        <%= form_with(model: [:admin, @chronic_illness], local: true, class: "space-y-6") do |form| %>
          <% if @chronic_illness.errors.any? %>
            <div class="alert alert-error">
              <ul>
                <% @chronic_illness.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

          <div class="form-control">
            <%= form.label :name, class: "label" %>
            <%= form.text_field :name, class: "input input-bordered w-full", placeholder: "Enter chronic illness name" %>
          </div>

          <div class="form-control">
            <%= form.label :description, class: "label" %>
            <%= form.text_area :description, class: "textarea textarea-bordered w-full", rows: 4, placeholder: "Enter description (optional)" %>
          </div>

          <div class="form-control">
            <%= form.label :color, class: "label" %>
            <div class="flex items-center gap-3">
              <%= form.color_field :color, class: "input input-bordered w-20 h-10" %>
              <span class="text-sm text-gray-600">Choose a color to represent this chronic illness</span>
            </div>
          </div>

          <div class="flex justify-end gap-3 pt-4">
            <%= link_to "Cancel", admin_chronic_illness_path(@chronic_illness), class: "btn btn-ghost" %>
            <%= form.submit "Update Chronic Illness", class: "btn btn-primary text-white" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
