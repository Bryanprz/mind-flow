<% content_for :main_container_class, 'bg-base-200' %>

<div class="container mx-auto px-4 py-8">
  <div class="max-w-4xl mx-auto">
    <!-- Header -->
    <div class="flex justify-between items-center mb-6">
      <div class="flex items-center gap-4">
        <div class="w-6 h-6 rounded-full" style="background-color: <%= @chronic_illness.color %>"></div>
        <h1 class="text-3xl font-bold"><%= @chronic_illness.name %></h1>
      </div>
      <div class="flex gap-2">
        <%= link_to "Edit", edit_admin_chronic_illness_path(@chronic_illness), class: "btn btn-ghost" %>
        <%= link_to "Delete", admin_chronic_illness_path(@chronic_illness), method: :delete, 
                    class: "btn btn-error text-white", 
                    data: { confirm: "Are you sure you want to delete #{@chronic_illness.name}?" } %>
      </div>
    </div>

    <!-- Description -->
    <% if @chronic_illness.description.present? %>
      <div class="card bg-base-100 border border-gray-300 mb-6">
        <div class="card-body">
          <h2 class="card-title mb-3">Description</h2>
          <div class="prose max-w-none">
            <%= simple_format(@chronic_illness.description) %>
          </div>
        </div>
      </div>
    <% end %>

    <!-- Healing Plan Templates -->
    <div class="card bg-base-100 border border-gray-300">
      <div class="card-body">
        <div class="flex justify-between items-center mb-4">
          <h2 class="card-title">Healing Plan Templates</h2>
          <%= link_to "Create Template", "#", class: "btn btn-primary btn-sm text-white" %>
        </div>
        
        <% if @chronic_illness.healing_plan_templates.any? %>
          <div class="space-y-3">
            <% @chronic_illness.healing_plan_templates.order(:duration_type).each do |template| %>
              <div class="flex items-center justify-between p-3 bg-base-200 rounded-lg">
                <div>
                  <h3 class="font-medium"><%= template.name %></h3>
                  <p class="text-sm text-gray-600">
                    <%= template.duration_type.humanize %> • 
                    <%= pluralize(template.plan_section_templates.count, 'section') %>
                  </p>
                </div>
                <div class="flex gap-2">
                  <%= link_to "View", "#", class: "btn btn-ghost btn-sm" %>
                  <%= link_to "Edit", "#", class: "btn btn-ghost btn-sm" %>
                </div>
              </div>
            <% end %>
          </div>
        <% else %>
          <p class="text-gray-500">No healing plan templates created yet.</p>
        <% end %>
      </div>
    </div>

    <!-- Back Button -->
    <div class="mt-6">
      <%= link_to "← Back to Chronic Illnesses", admin_chronic_illnesses_path, class: "btn btn-ghost" %>
    </div>
  </div>
</div>
