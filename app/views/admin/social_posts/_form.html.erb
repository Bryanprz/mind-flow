<%= form_with(model: [:admin, @social_post]) do |form| %>
  <% if @social_post.errors.any? %>
    <div class="alert alert-error">
      <ul>
        <% @social_post.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="card bg-base-100 border border-gray-300 max-w-2xl">
    <div class="card-body">
      <div class="form-control mb-4">
        <%= form.label :content, class: "label" %>
        <%= form.rich_text_area :content, rows: 6, class: "textarea textarea-bordered" %>
      </div>

      <div class="form-control mb-4">
        <%= form.label :published_at, class: "label" %>
        <%= form.datetime_select :published_at, include_seconds: false, class: "input input-bordered" %>
        <small class="text-xs text-gray-500">Leave blank to keep as draft</small>
      </div>

      <div class="card-actions justify-end">
        <%= form.submit class: "btn btn-primary" %>
        <%= link_to "Cancel", (@social_post.persisted? ? admin_social_post_path(@social_post) : admin_social_posts_path), class: "btn btn-ghost" %>
      </div>
    </div>
  </div>
<% end %>
