<% content_for :main_container_class, 'bg-base-200' %>

<div class="container mx-auto px-4 py-8">
  <div class="card bg-base-100 border border-gray-300">
    <div class="card-body p-5">
      <h1 class="card-title text-2xl mb-4">All Social Posts</h1>

      <% if @social_posts.any? %>
        <div class="overflow-x-auto">
          <table class="table">
            <thead>
              <tr>
                <th>ID</th>
                <th>Author</th>
                <th>Content</th>
                <th>Published At</th>
                <th>Preview</th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              <% @social_posts.each do |post| %>
                <tr>
                  <td><%= post.id %></td>
                  <td><%= post.respond_to?(:user) ? post.user&.name : '-' %></td>
                  <td class="max-w-[400px] truncate"><%= post.content %></td>
                  <td><%= post.published_at&.in_time_zone&.strftime('%b %d %Y %H:%M') || '—' %></td>
                  <td>
                    <% img = (post.respond_to?(:media) ? post.media.find { |f| f.image? } : nil) %>
                    <% if img.present? %>
                      <%= image_tag img, class: "w-16 h-16 object-cover rounded border" %>
                    <% else %>
                      —
                    <% end %>
                  </td>
                  <td class="text-right whitespace-nowrap">
                    <div class="flex items-center justify-end gap-2">
                      <%= link_to 'Show', admin_social_post_path(post), class: 'btn btn-ghost btn-sm' %>
                      <%= link_to 'Edit', edit_admin_social_post_path(post), class: 'btn btn-secondary btn-sm' %>
                      <%= button_to 'Delete', admin_social_post_path(post), method: :delete, form: { data: { turbo_confirm: 'Are you sure?' } }, class: 'btn btn-error btn-sm' %>
                    </div>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      <% else %>
        <p>No social posts yet.</p>
      <% end %>

      <div class="card-actions justify-end mt-4">
        <%= link_to 'Back to Admin Dashboard', admin_root_path, class: 'btn btn-ghost' %>
      </div>
    </div>
  </div>
</div>
