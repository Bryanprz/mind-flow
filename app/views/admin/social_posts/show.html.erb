<% content_for :main_container_class, 'bg-base-200' %>

<div class="container mx-auto px-4 py-8">
  <div class="card bg-base-100 border border-gray-300 max-w-2xl mx-auto">
    <div class="card-body">
      <h1 class="card-title text-2xl mb-4">Social Post #<%= @social_post.id %></h1>

      <p class="mb-2"><strong>Author:</strong> <%= @social_post.respond_to?(:user) ? @social_post.user&.name : '-' %></p>
      <p class="mb-2"><strong>Published At:</strong> <%= @social_post.published_at&.in_time_zone&.strftime('%Y-%m-%d %H:%M') || 'â€”' %></p>

      <div class="divider"></div>

      <div>
        <p class="font-semibold mb-1">Content:</p>
        <div class="prose max-w-none bg-base-200 rounded p-3"><%= @social_post.content %></div>
      </div>

      <% if @social_post.media.attached? %>
        <div class="mt-6">
          <p class="font-semibold mb-2">Media:</p>
          <div class="grid grid-cols-1 gap-4">
            <% @social_post.media.each do |file| %>
              <% if file.image? %>
                <div class="bg-base-200 rounded p-2">
                  <%= image_tag file, class: "rounded w-full h-auto", alt: file.filename.to_s %>
                </div>
              <% else %>
                <div>
                  <%= link_to file.filename.to_s, url_for(file), class: "link link-primary" %>
                </div>
              <% end %>
            <% end %>
          </div>
        </div>
      <% end %>

      <div class="card-actions justify-end mt-6 flex-nowrap">
        <%= link_to 'Edit', edit_admin_social_post_path(@social_post), class: 'btn btn-secondary btn-sm' %>
        <%= button_to 'Delete', admin_social_post_path(@social_post), method: :delete, form: { data: { turbo_confirm: 'Are you sure?' } }, class: 'btn btn-error btn-sm' %>
        <%= link_to 'Back', admin_social_posts_path, class: 'btn btn-ghost btn-sm' %>
      </div>
    </div>
  </div>
</div>
