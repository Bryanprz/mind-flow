<turbo-frame id="main_content_area">
  <div class="container mx-auto px-4 py-8">
    <div class="card w-full max-w-lg mx-auto bg-base-100 shadow-xl">
      <div class="card-body">
        <h1 class="card-title text-2xl">Editing <%= @user.name %></h1>
        <%= render "form", user: @user %>
      </div>
      <div class="card-actions justify-center p-4 border-t border-base-200">
        <%= link_to "Show User", [:admin, @user], class: "btn btn-ghost" %>
        <%= link_to "Back to Users", admin_users_path, class: "btn btn-ghost" %>
      </div>
    </div>
  </div>
</turbo-frame>
