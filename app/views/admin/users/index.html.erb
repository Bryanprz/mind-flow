<turbo-frame id="main_content_area">
  <% content_for :main_container_class, 'w-full flex-1 flex flex-col items-center bg-base-200 p-8' %>

  <div class="container mx-auto px-4 py-8">
    <% if notice.present? %>
      <div class="alert alert-success shadow-lg mb-5">
        <div>
          <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current flex-shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>
          <span><%= notice %></span>
        </div>
      </div>
    <% end %>

    <% content_for :title, "Users" %>

    <div class="flex justify-between items-center mb-6">
      <h1 class="text-3xl font-bold">Users</h1>
      <%= link_to "New User", new_admin_user_path, class: "btn btn-primary" %>
    </div>

    <div id="admin_users" class="w-full max-w-4xl mx-auto">
      <% @users.each do |user| %>
        <%= render user %>
      <% end %>
    </div>
  </div>
</turbo-frame>
