<% content_for :main_container_class, 'bg-base-200' %>

<div class="container mx-auto px-4 max-w-lg">
  <% content_for :title, "Users" %>

  <div class="flex justify-between items-center my-6">
    <h1 class="text-3xl font-bold">Users</h1>
    <%= link_to "New user", new_admin_user_path, class: "btn btn-primary" %>
  </div>

  <div class="overflow-x-auto rounded-lg border border-gray-300">
    <table class="table w-full">
      <thead class="bg-gray-50">
        <tr>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Name</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"></th>
        </tr>
      </thead>
      <tbody id="admin_users" class="bg-white">
        <% @users.each do |user| %>
          <tr id="<%= dom_id user %>" class="hover:bg-accent hover:text-white">
            <td class="px-6 py-4 whitespace-nowrap">
              <div class="text-sm font-medium text-gray-900"><%= user.name %></div>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
              <%= link_to "Show", [:admin, user], class: "btn btn-ghost btn-sm" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
