<% content_for :main_container_class, 'bg-base-200' %>

<div class="container mx-auto px-4 py-8">
  <div class="max-w-2xl mx-auto">
    <!-- Header -->
    <div class="flex justify-between items-center mb-6">
      <div>
        <h1 class="text-3xl font-bold">Add New Section</h1>
        <p class="text-lg text-gray-600">to <%= @healing_plan_template.name %></p>
      </div>
      <%= link_to "← Back", admin_healing_plan_template_path(@healing_plan_template), class: "btn btn-ghost" %>
    </div>

    <!-- Form -->
    <div class="card bg-base-100 border border-gray-300">
      <div class="card-body">
        <%= form_with(model: [:admin, @healing_plan_template, @plan_section_template], local: true) do |form| %>
          <% if @plan_section_template.errors.any? %>
            <div class="alert alert-error shadow-lg mb-4">
              <div>
                <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current flex-shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
                <span><%= pluralize(@plan_section_template.errors.count, "error") %> prohibited this section from being saved:</span>
              </div>
              <ul class="mt-2">
                <% @plan_section_template.errors.each do |error| %>
                  <li><%= error.full_message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

          <div class="form-control mb-4">
            <%= form.label :name, class: "label" %>
            <%= form.text_field :name, class: "input input-bordered w-full", placeholder: "e.g., Morning Routine, Diet Guidelines, Exercise Plan" %>
          </div>

          <div class="form-control mb-4">
            <%= form.label :position, class: "label" %>
            <%= form.number_field :position, class: "input input-bordered w-full", placeholder: "Position in the plan" %>
          </div>

          <!-- Add Plan Items Button (Note: Only available after section is created) -->
          <div class="form-control mb-4">
            <div class="flex items-center gap-3 p-3 bg-gray-50 rounded-lg border border-gray-200">
              <div class="flex-1">
                <h3 class="font-medium text-gray-700">Plan Items</h3>
                <p class="text-sm text-gray-500">
                  You can add plan items after creating this section
                </p>
              </div>
              <button type="button" class="btn btn-primary btn-sm text-white opacity-50 cursor-not-allowed" disabled>
                <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
                </svg>
                Add Plan Items
              </button>
            </div>
          </div>

          <div class="flex gap-2 justify-end">
            <%= form.submit "Create Section", class: "btn btn-primary text-white" %>
            <%= link_to "Cancel", admin_healing_plan_template_path(@healing_plan_template), class: "btn btn-ghost" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>