<% content_for :main_container_class, 'bg-base-200' %>

<div class="container mx-auto px-4 py-8">
  <div class="card bg-base-100 border border-gray-300">
    <div class="card-body p-5">
      <div class="flex justify-between items-center mb-4">
        <h1 class="card-title text-2xl">Newsletter Subscribers</h1>
        <div class="text-sm text-gray-600">
          <%= @subscribed_count %> active subscribers
        </div>
      </div>
      
      <!-- Stats Cards -->
      <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-6">
        <div class="bg-blue-50 rounded-lg p-4">
          <div class="text-xl font-bold text-blue-600"><%= @total_count %></div>
          <div class="text-sm text-gray-600">Total Subscribers</div>
        </div>
        <div class="bg-green-50 rounded-lg p-4">
          <div class="text-xl font-bold text-green-600"><%= @subscribed_count %></div>
          <div class="text-sm text-gray-600">Active Subscribers</div>
        </div>
        <div class="bg-red-50 rounded-lg p-4">
          <div class="text-xl font-bold text-red-600"><%= @total_count - @subscribed_count %></div>
          <div class="text-sm text-gray-600">Unsubscribed</div>
        </div>
      </div>
      
      <!-- Newsletter Blast Form -->
      <div class="bg-gray-50 rounded-lg p-4 mb-6">
        <h2 class="text-lg font-semibold mb-3">Send Newsletter Blast</h2>
        <%= form_with url: send_blast_admin_newsletters_path, method: :post, local: true, class: "space-y-3" do |form| %>
          <div>
            <%= form.label :subject, "Subject", class: "block text-sm font-medium mb-1" %>
            <%= form.text_field :subject, class: "input input-bordered w-full border-gray-300 focus:border-gray-500 focus:ring-gray-500", placeholder: "Newsletter subject" %>
          </div>
          <div>
            <%= form.label :content, "Content", class: "block text-sm font-medium mb-1" %>
            <%= form.text_area :content, rows: 4, class: "textarea textarea-bordered w-full border-gray-300 focus:border-gray-500 focus:ring-gray-500", placeholder: "Newsletter content (HTML supported)" %>
          </div>
          <%= form.submit "Send to All Subscribers", class: "btn btn-primary btn-sm", data: { confirm: "Are you sure you want to send this to all #{@subscribed_count} subscribers?" } %>
        <% end %>
      </div>

      <% if @newsletters.any? %>
        <div class="overflow-x-auto">
          <table class="table">
            <thead>
              <tr>
                <th>ID</th>
                <th>Email Address</th>
                <th>Status</th>
                <th>Subscribed At</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              <% @newsletters.each do |newsletter| %>
                <tr>
                  <td><%= newsletter.id %></td>
                  <td><%= newsletter.email_address %></td>
                  <td>
                    <span class="badge <%= newsletter.status == 'subscribed' ? 'badge-success' : 'badge-error' %>">
                      <%= newsletter.status.titleize %>
                    </span>
                  </td>
                  <td><%= newsletter.subscribed_at&.strftime('%b %d %Y %H:%M') || 'â€”' %></td>
                  <td class="text-right whitespace-nowrap">
                    <div class="flex items-center justify-end gap-2">
                      <%= link_to 'Show', admin_newsletter_path(newsletter), class: 'btn btn-ghost btn-sm' %>
                      <%= button_to 'Delete', admin_newsletter_path(newsletter), method: :delete, form: { data: { turbo_confirm: 'Are you sure?' } }, class: 'btn btn-error btn-sm' %>
                    </div>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      <% else %>
        <p>No newsletter subscribers yet.</p>
      <% end %>

      <div class="card-actions justify-end mt-4">
        <%= link_to 'Back to Admin Dashboard', admin_root_path, class: 'btn btn-ghost' %>
      </div>
    </div>
  </div>
</div>
