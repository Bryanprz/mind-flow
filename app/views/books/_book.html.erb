<div id="<%= dom_id book %>">
  <div class="card border border-gray-300 bg-base-100 w-96">
    <div class="card-body">
      <h2 class="card-title"><%= book.title %></h2>

      <div class="flex flex-col items-start">
        <small>
          <span class="italic text-gray-500 text-sm">
            Category: <%= book.category %>
          </span>
        </small>
        <p><%= link_to "Verses", verses_path(book_id: book), class: "text-sm text-blue-500 hover:text-blue-700", data: { turbo_action: "advance" } %></p>

        <p><%= book.description %></p>
      </div>

      <div class="card-actions justify-end">
        <%= link_to "Show this book", book, class: "btn btn-sm btn-secondary text-sm" %>
      </div>
    </div>
  </div>
</div>
