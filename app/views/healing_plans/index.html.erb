<% content_for :main_container_class, 'w-full flex-1 bg-base-200 p-8' %>
<% content_for :title, "Healing plans" %>

<div class="w-full flex flex-col items-center">
  <div class="max-w-xl mx-auto w-full space-y-6 flex-grow">
    <div class="flex flex-col items-center justify-between">
      <h1 class="font-bold text-4xl">Healing plans</h1>
    </div>

    <div id="healing_plans" class="w-full max-w-lg mx-auto">
      <% @healing_plans.each do |healing_plan| %>
        <%= render "healing_plans/healing_plan", healing_plan: healing_plan %>
      <% end %>
    </div>
  </div>
  <%= link_to "Daily Check-in", my_healing_plan_path, class: "rounded-lg py-3 px-5 bg-primary text-white block font-medium mt-5" %>
</div>
