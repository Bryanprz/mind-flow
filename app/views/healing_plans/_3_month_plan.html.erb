<div class="max-w-[700px] mx-auto p-6 space-y-6">
  <!-- Hero / Intro -->
  <div class="card bg-base-100 border border-gray-300">
    <div class="card-body">
      <h1 class="card-title text-2xl">
        <%= Current.user.first_name.titleize %>, here is your 3-Month Healing Plan
      </h1>
      <p class="text-base mt-3">
      Designed to balance <%= Current.user.prakruti&.name&.titleize || 'your unique constitution' %>, restore digestion, and calm your energy.
      </p>
    </div>
  </div>

  <!-- Overview Dashboard -->
  <div class="card bg-base-100 border border-gray-300">
    <div class="card-body">
      <h2 class="card-title text-xl">Overview</h2>
      <div class="overflow-x-auto">
        <table class="table">
          <thead>
            <tr>
              <th>Focus Area</th>
              <th>Goal</th>
              <th>Status</th>
            </tr>
          </thead>
          <tbody>
            <% @healing_plan.sections.find { |s| s.name == "Long-term Goals" }&.items.each do |item| %>
              <tr>
                <td><%= item.content.split(':').first %></td>
                <td><%= item.content.split(':').last %></td>
                <td></td> <%# No status icon/status in new data %>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>

  <%# Render all sections for this plan %>
  <% if @healing_plan&.sections&.any? %>
    <% @healing_plan.sections.order(:position).each do |section| %>
      <div class="collapse collapse-arrow bg-base-100 border border-gray-300">
        <input type="checkbox" id="section-<%= section.id %>-checkbox" checked="checked" />
        <div class="collapse-title text-lg font-medium">
          <%= section.name %>
        </div>
        <div class="collapse-content">
          <ul class="list-disc list-inside space-y-1">
            <% section.items.order(:position).each do |item| %>
              <li><%= item.content %></li>
            <% end %>
          </ul>
        </div>
      </div>
    <% end %>
  <% else %>
    <div class="card bg-base-100 border border-gray-300">
      <div class="card-body">
        <p>This healing plan does not have any sections defined yet.</p>
      </div>
    </div>
  <% end %>

  <!-- Progress & Reflection -->
  <div class="card bg-base-100 border border-gray-300">
    <div class="card-body">
      <h2 class="card-title text-xl">Progress & Reflection</h2>
      <div class="form-control">
        <% @healing_plan.sections.order(:position).each do |section| %>
          <label class="label cursor-pointer">
            <span class="label-text">Completed: <%= section.name %></span>
            <input type="checkbox" class="checkbox checkbox-success" />
          </label>
        <% end %>
      </div>
      <textarea class="textarea textarea-bordered w-full mt-3" placeholder="Journal: How are you feeling about your progress?"></textarea>
    </div>
  </div>

  <!-- CTA -->
  <div class="card bg-base-100 border border-gray-300">
    <div class="card-body text-center">
      <p class="mb-3">Follow this plan for 7 days, then reflect on your progress ðŸŒ±</p>
      <div class="flex justify-center gap-4">
        <%= button_to "Export as PDF", "#", method: :get, class: "btn btn-outline" %>
        <%= link_to "Continue My Journey", "#", class: "btn btn-primary" %>
      </div>
    </div>
  </div>
</div>
