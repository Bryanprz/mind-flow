<% completed_item_ids = @healing_plan.todays_log&.completed_item_ids || [] %>

<div class="max-w-[700px] mx-auto p-6 space-y-6" data-controller="healing-plan-progress" data-healing-plan-progress-healing-plan-id-value="<%= @healing_plan.id %>" data-healing-plan-progress-healing-plan-log-id-value="">
  <!-- Hero / Intro -->
  <div class="card bg-base-100 border border-gray-300">
    <div class="card-body">
      <h1 class="card-title text-2xl">
        <%= Current.user.first_name.titleize %>, here is your personalized Daily Healing Plan 
      </h1>
      <p class="text-base mt-3">
      Designed to balance <%= Current.user.prakruti&.name&.titleize || 'your unique constitution' %>, restore digestion, and calm your energy.
      </p>
    </div>
  </div>

  <!-- Progress & Streak -->
  <div class="card bg-base-100 border border-gray-300">
    <div class="card-body">
      <div class="flex justify-between items-center mb-2">
        <h2 class="card-title text-xl">Daily Progress</h2>
        <div class="font-bold text-lg">
          ðŸ”¥ 0 Day Streak! <%# TODO: Implement streak logic %>
        </div>
      </div>
      <progress data-healing-plan-progress-target="progress" class="progress progress-success w-full" value="0" max="100"></progress>
    </div>
  </div>

  <!-- Overview Dashboard -->
  <div class="card bg-base-100 border border-gray-300">
    <div class="card-body">
      <h2 class="card-title text-xl">Overview</h2>
      <div class="overflow-x-auto">
        <table class="table">
          <thead>
            <tr>
              <th>Focus Area</th>
              <th>Goal</th>
              <th>Status</th>
            </tr>
          </thead>
          <tbody>
            <% @healing_plan.sections.find { |s| s.name == "Focus Areas" }&.plan_items.each do |item| %>
              <tr>
                <td><%= item.content.split(':').first %></td>
                <td><%= item.content.split(':').last %></td>
                <td></td> <%# No status icon/status in new data %>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>

  <!-- Daily Routine -->
  <div class="space-y-3">
    <% ["Morning Routine", "Midday Routine", "Evening Routine"].each do |section_name| %>
      <% section = @healing_plan.sections.find { |s| s.name == section_name } %>
      <% if section %>
        <div class="collapse collapse-arrow bg-base-100 border border-gray-300">
          <input type="checkbox" id="<%= section.name.parameterize %>-checkbox" />
          <label for="<%= section.name.parameterize %>-checkbox" class="collapse-title text-lg font-medium">
            <%= section.name %>
          </label>
          <div class="collapse-content">
            <div class="form-control">
              <% section.plan_items.each do |item| %>
                <div data-healing-plan-progress-target="item" class="py-1">
                  <label class="label cursor-pointer justify-start">

                    <input 
                      type="checkbox" 
                      class="checkbox checkbox-success mr-4" 
                      data-action="healing-plan-progress#toggle"
                      data-plan-item-id="<%= item.id %>" 
                      <%= 'checked' if completed_item_ids.include?(item.id) %> />

                    <span class="label-text"><%= item.content %></span>
                  </label>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>

  <!-- Diet & Herbs -->
  <div class="card bg-base-100 border border-gray-300">
    <div class="card-body">
      <h2 class="card-title text-xl">Diet & Herbs</h2>
      <% section = @healing_plan.sections.find { |s| s.name == "Foods to Favor" } %>
      <% if section %>
        <p><strong>Favor:</strong> <%= section.plan_items.map(&:content).join(", ") %></p>
      <% end %>
      <% section = @healing_plan.sections.find { |s| s.name == "Foods to Avoid" } %>
      <% if section %>
        <p><strong>Avoid:</strong> <%= section.plan_items.map(&:content).join(", ") %></p>
      <% end %>
      <div class="mt-3">
        <h3 class="font-semibold">Herbs:</h3>
        <div class="form-control">
          <% section = @healing_plan.sections.find { |s| s.name == "Herbal Remedies" } %>
          <% if section %>
            <% section.plan_items.each do |item| %>
              <div data-healing-plan-progress-target="item" class="py-1">
                <label class="label cursor-pointer justify-start">

                  <input 
                    type="checkbox" 
                    class="checkbox checkbox-success mr-4" 
                    data-action="healing-plan-progress#toggle" 
                    data-plan-item-id="<%= item.id %>" 
                    <%= 'checked' if completed_item_ids.include?(item.id) %> />

                  <span class="label-text"><%= item.content %></span>
                </label>
              </div>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <!-- Lifestyle & Mind-Body -->
  <div class="card bg-base-100 border border-gray-300">
    <div class="card-body">
      <h2 class="card-title text-xl">Lifestyle & Mind-Body Practices</h2>
      <div class="form-control">
        <% section = @healing_plan.sections.find { |s| s.name == "Lifestyle Practices" } %>
        <% if section %>
          <% section.plan_items.each do |item| %>
            <div data-healing-plan-progress-target="item" class="py-1">
              <label class="label cursor-pointer justify-start">

                <input 
                  type="checkbox" 
                  class="checkbox checkbox-success mr-4" 
                  data-action="healing-plan-progress#toggle"
                  data-plan-item-id="<%= item.id %>" 
                  <%= 'checked' if completed_item_ids.include?(item.id) %> />

                <span class="label-text"><%= item.content %></span>
              </label>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Progress & Reflection -->
  <div class="card bg-base-100 border border-gray-300">
    <div class="card-body">
      <h2 class="card-title text-xl">Progress & Reflection</h2>
      <div class="form-control">
        <% ["Morning Routine", "Midday Routine", "Evening Routine"].each do |section_name| %>
          <% section = @healing_plan.sections.find { |s| s.name == section_name } %>
          <% if section %>
            <label class="label cursor-pointer">
              <span class="label-text"><%= section.name %> completed</span> 
              <input type="checkbox" class="checkbox checkbox-success" />
            </label>
          <% end %>
        <% end %>
      </div>
      <textarea data-healing-plan-progress-target="journal" class="textarea textarea-bordered w-full mt-3" placeholder="Journal: How did you feel today?"></textarea>
    </div>
  </div>

  <!-- CTA -->
  <div class="card bg-base-100 border border-gray-300">
    <div class="card-body text-center">
      <p class="mb-3">Follow this plan for 7 days, then reflect on your progress ðŸŒ±</p>
      <div class="flex justify-center gap-4">
        <button type="button" data-action="healing-plan-progress#savePlan" class="btn btn-primary text-white">Save Daily Plan</button>
        <%= button_to "Export as PDF", "#", method: :get, class: "btn btn-outline" %>
      </div>
    </div>
  </div>
</div>
