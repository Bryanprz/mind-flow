<% content_for :main_container_class, 'w-full flex-1 bg-base-200 p-8' %>

<div class="w-1/2 max-w-4xl mx-auto space-y-6">
  <%# --- Plan Header --- %>
  <div class="text-center mb-8">
    <h1 class="text-4xl font-bold"><%= @healing_plan.name %></h1>
    <p class="text-lg text-gray-500">Version <%= @healing_plan.version %></p>
    <%# TODO: Add "Create New Version" button here %>
  </div>

  <%# --- Iterate through Sections and Items --- %>
  <% @plan_sections.each do |section| %>
    <div class="card bg-base-100 border border-gray-300">
      <div class="card-body">
        <h2 class="card-title text-2xl mb-4"><%= section.name %></h2>
        
        <ul class="space-y-2">
          <% section.plan_items.order(:ordering).each do |item| %>
            <li class="flex items-center">
              <%# TODO: Make this checkbox functional to update the item's 'completed' status %>
              <input type="checkbox" <%= 'checked' if item.completed? %> class="checkbox checkbox-primary mr-4">
              <span><%= item.content %></span>
            </li>
          <% end %>
        </ul>

        <%# TODO: Add form/button to add a new item to this section %>
      </div>
    </div>
  <% end %>

  <% if Current.user.admin? %>
    <div class="text-center mt-8">
      <%= link_to "Back to All Plans", healing_plans_path, class: "btn btn-ghost" %>
    </div>
  <% end %>
</div>
