<div id="<%= dom_id healing_plan %>" class="card bg-base-100 border border-gray-300 shadow-xl">
  <div class="card-body">
    <h2 class="card-title"><%= healing_plan.name %></h2>
    <p class="text-sm text-gray-500">Version: <%= healing_plan.version %></p>
    <p class="text-sm text-gray-500">Active: <%= healing_plan.is_active ? 'Yes' : 'No' %></p>
    <p class="text-sm text-gray-500">User ID: <%= healing_plan.user_id %></p>
    <p class="text-sm mt-2"><%= healing_plan.description %></p>

    <div class="card-actions justify-end mt-4">
      <%= link_to "Show Details", healing_plan, class: "btn btn-secondary btn-sm" %>
      <%# TODO: Add Edit/Delete buttons here for version management %>
    </div>
  </div>
</div>
