<% content_for :main_container_class, 'w-full h-full flex justify-center items-stretch bg-base-200 p-8' %>

<div class="w-full max-w-2xl mx-auto bg-base-100 border border-gray-300 rounded-2xl flex flex-col p-6">
  <h1 class="text-3xl font-bold mb-6 text-center">Generate a New Healing Plan</h1>

  <p class="text-center mb-8">
    Select your primary goals for this new plan. The recommendations will be tailored based on your selections and your latest assessment results.
  </p>

  <%# Apply flex-grow to the form itself, making it a flex container %>
  <%= form_with url: healing_plans_path, method: :post, class: "flex-grow flex flex-col" do |form| %>
    <%# This div will take up all remaining vertical space, pushing the submit button down %>
    <div class="space-y-6 flex-grow">
      <div class="form-control">
        <label class="label cursor-pointer">
          <span class="label-text text-lg">Improve Sleep</span>
          <%= check_box_tag "goals[]", "sleep", false, class: "checkbox checkbox-primary" %>
        </label>
      </div>

      <div class="form-control">
        <label class="label cursor-pointer">
          <span class="label-text text-lg">Better Digestion</span>
          <%= check_box_tag "goals[]", "digestion", false, class: "checkbox checkbox-primary" %>
        </label>
      </div>

      <div class="form-control">
        <label class="label cursor-pointer">
          <span class="label-text text-lg">More Energy</span>
          <%= check_box_tag "goals[]", "energy", false, class: "checkbox checkbox-primary" %>
        </label>
      </div>
    </div>

    <div class="card-actions justify-center mt-8">
      <%= form.submit "Generate My Plan", class: "btn btn-primary btn-lg text-white" %>
    </div>
  <% end %>
</div>
