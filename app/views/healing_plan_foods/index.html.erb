<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <% content_for :title, "Healing plan foods" %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Healing plan foods</h1>
    <%= link_to "New healing plan food", new_healing_plan_food_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>

  <div id="healing_plan_foods" class="min-w-full">
    <% @healing_plan_foods.each do |healing_plan_food| %>
      <%= render healing_plan_food %>
      <p>
        <%= link_to "Show this healing plan food", healing_plan_food, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
      </p>
    <% end %>
  </div>
</div>
