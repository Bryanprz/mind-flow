<div class="navbar bg-base-100 sticky top-0 z-50 border-b" data-controller="mobile-menu">
  <div class="navbar-start">
    <div class="lg:hidden">
      <button type="button" class="btn btn-ghost" data-action="click->mobile-menu#toggle">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>
      <div class="absolute left-0 right-0 top-full bg-base-100 shadow-lg z-50 hidden" data-mobile-menu-target="menu">
        <ul class="menu menu-vertical p-2 w-full">
          <%= render "layouts/navigation_links" %>
        </ul>
      </div>
    </div>
    <%= link_to raw("Ancient<span class='text-secondary'>Herb</span>ðŸŒ¿"), root_path, class: "btn btn-ghost text-2xl text-primary tracking-tighter !gap-0" %>
  </div>

  <div class="navbar-center hidden lg:flex">
    <ul class="menu menu-horizontal px-1">
      <%= render "layouts/navigation_links" %>
    </ul>
  </div>

  <div class="navbar-end">

    <% if authenticated? %>
      <div class="dropdown dropdown-end">
        <div tabindex="0" role="button" class="btn btn-ghost btn-circle avatar">
          <div class="w-10 rounded-full">
            <img
                alt="Tailwind CSS Navbar component"
                src="https://img.daisyui.com/images/stock/photo-1534528741775-53994a69daeb.webp" />
          </div>
        </div>
        <ul
            tabindex="0"
            class="menu menu-sm dropdown-content bg-base-100 rounded-box z-1 mt-3 w-52 p-2 shadow">
          <li class="font-light menu-title italic"><span>Logged in as <%= Current.user.name %></span></li>
          <li><%= link_to "Profile", profile_path %></li>
          <li><a>Settings</a></li>
          <li><%= button_to "Logout", session_path, method: :delete, class: "link-button" %></li>
        </ul>
      </div>
    <% else %>
      <button class="btn btn-accent" data-action="click->modal#open">Join -></button>
    <% end %>
  </div>

</div>
