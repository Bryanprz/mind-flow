<!DOCTYPE html>
<html data-theme="lemonade">
  <head>
    <title><%= content_for(:title) || "Ancient Herb" %></title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="mobile-web-app-capable" content="yes">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= yield :head %>

    <link rel="icon" href="/favicon.png" type="image/png">
    <link rel="apple-touch-icon" href="/favicon.png">

    <%= stylesheet_link_tag "tailwind", "inter-font", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body class="min-h-screen flex flex-col" data-controller="modal">
    <% unless content_for?(:hide_navigation) %>
      <%= render "layouts/navigation" %>
    <% end %>
    <%= render "layouts/flash" %>

    <div class="flex-1 flex flex-col">
      <div id="main_content_area" class="flex-1 <%= content_for?(:main_container_class) ? yield(:main_container_class) : 'container mx-auto px-5' %>">
        <%= yield %>
      </div>
    </div>

    <% unless content_for?(:hide_footer) %>
      <%= render "layouts/footer" %>
    <% end %>
    <%= render "shared/sign_up_modal" %>
  </body>
</html>
