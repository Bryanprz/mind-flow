<% content_for :main_container_class, 'w-full flex-1 flex justify-center items-stretch bg-base-200 p-8' %>

<div class="w-full flex flex-col items-center">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <% content_for :title, "Chronic illnesses" %>

  <div class="text-center mb-8">
    <h1 class="font-bold text-2xl">What chronic issues do you want to focus on?</h1>
  </div>

  <div id="chronic_illnesses" class="w-full max-w-lg grid grid-cols-5 gap-6 items-start justify-items-center">
    <% @chronic_illnesses.each do |chronic_illness| %>
      <%= render chronic_illness %>
    <% end %>
  </div>
</div>
