<%= form_with model: SocialPost.new, url: social_posts_path, class: "border border-gray-300 card bg-base-100 p-4", data: { turbo_frame: "_top" }, multipart: true do |form| %>
  <div class="form-control">
    <%= form.label :content, class: "label" %>
    <%= form.text_area :content, class: "textarea textarea-bordered h-24", placeholder: "What's on your mind?" %>
  </div>

  <div class="form-control mt-4">
    <%= form.label :media, "Upload Media", class: "label" %>
    <%= form.file_field :media, multiple: true, class: "file-input file-input-bordered w-full" %>
  </div>

  <div class="form-control mt-6">
    <%= form.submit "Create Post", class: "btn btn-primary" %>
  </div>
<% end %>
