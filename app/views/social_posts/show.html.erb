<% content_for :main_container_class, 'bg-base-200' %>

<div data-controller="scroll-nav">

<div class="max-w-2xl mx-auto px-4 py-6">
  <!-- Back button -->
  <div class="mb-4">
    <%= link_to community_path, class: "flex items-center gap-2 text-gray-600 hover:text-gray-900 transition-colors" do %>
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
      </svg>
      Back to Community
    <% end %>
  </div>

  <!-- Main Post -->
  <div class="card bg-base-100 border border-gray-300 rounded-lg overflow-hidden mb-6" data-controller="social-post" data-social-post-post-id-value="<%= @social_post.id %>" data-social-post-original-post-id-value="<%= @social_post.id %>">
    <div class="card-body p-4">
      <div class="flex items-start mb-6">
        <%= link_to user_path(@social_post.user), 
                    class: "avatar placeholder mr-3 hover:opacity-80 transition-opacity",
                    data: { action: "click->social-post#stopPropagation" } do %>
          <div class="rounded-full w-12 h-12 overflow-hidden">
            <% if @social_post.user.avatar.attached? %>
              <%= image_tag @social_post.user.avatar, class: "w-full h-full object-cover" %>
            <% else %>
              <div class="w-full h-full bg-neutral text-neutral-content flex items-center justify-center text-sm">
                <%= (@social_post.user.name.to_s.first&.upcase || @social_post.user.email_address.to_s.first&.upcase) %>
              </div>
            <% end %>
          </div>
        <% end %>
        <div class="flex-1 min-w-0">
          <h2 class="font-bold text-base truncate">
            <%= link_to @social_post.user.name, 
                        user_path(@social_post.user), 
                        class: "hover:text-blue-600 hover:underline transition-colors",
                        data: { action: "click->social-post#stopPropagation" } %>
          </h2>
          <%= link_to user_path(@social_post.user), 
                      class: "text-gray-500 text-sm truncate hover:text-blue-500 transition-colors -mt-1",
                      data: { action: "click->social-post#stopPropagation" } do %>
            @<%= @social_post.user.handle.presence || @social_post.user.name.downcase.gsub(' ', '_') %>
          <% end %>
        </div>
        <!-- 3-dot menu icon - only show for post owner -->
        <% if @social_post.user == Current.user %>
          <div class="relative" data-controller="dropdown">
            <button class="flex items-center justify-center w-8 h-8 rounded-full hover:bg-gray-100 transition-colors" 
                    data-dropdown-target="button"
                    data-action="click->dropdown#toggle">
              <svg class="w-5 h-5 text-gray-500" fill="currentColor" viewBox="0 0 24 24">
                <circle cx="5" cy="12" r="2"/>
                <circle cx="12" cy="12" r="2"/>
                <circle cx="19" cy="12" r="2"/>
              </svg>
            </button>
            
            <!-- Dropdown menu -->
            <div class="dropdown-content absolute right-0 top-10 bg-white border border-gray-200 rounded-lg shadow-lg py-1 min-w-[120px] hidden z-10"
                 data-dropdown-target="menu">
              <%= button_to "Delete Post", 
                  social_post_path(@social_post), 
                  method: :delete,
                  class: "w-full px-3 py-2 text-left text-sm text-red-600 hover:bg-red-50 transition-colors",
                  data: { 
                    turbo_confirm: "Are you sure you want to delete this post? This action cannot be undone.",
                    action: "click->dropdown#hide"
                  } %>
            </div>
          </div>
        <% end %>
      </div>

      <div class="prose prose-md max-w-none mb-4">
        <%= @social_post.content %>
      </div>

      <% if @social_post.media.attached? %>
        <div class="mb-4">
          <% if @social_post.media.count == 1 %>
            <!-- Single image - show at full width with reasonable max height -->
            <% media_item = @social_post.media.first %>
            <% if media_item.image? %>
              <div class="rounded-lg">
                <%= image_tag media_item, class: "w-full h-auto" %>
              </div>
            <% elsif media_item.video? %>
              <div class="aspect-video">
                <video controls class="w-full h-full rounded-lg">
                  <source src="<%= url_for(media_item) %>" type="<%= media_item.content_type %>">
                  Your browser does not support the video tag.
                </video>
              </div>
            <% else %>
              <div class="p-4 border rounded-lg">
                <%= link_to media_item.filename, url_for(media_item), class: "text-sm text-blue-600 hover:underline" %>
              </div>
            <% end %>
          <% else %>
            <!-- Multiple media items - use grid layout -->
            <div class="grid grid-cols-2 gap-2">
              <% @social_post.media.each do |media_item| %>
                <% if media_item.image? %>
                  <div class="aspect-square overflow-hidden rounded-lg">
                    <%= image_tag media_item, class: "w-full h-full object-cover" %>
                  </div>
                <% elsif media_item.video? %>
                  <div class="aspect-video">
                    <video controls class="w-full h-full rounded-lg">
                      <source src="<%= url_for(media_item) %>" type="<%= media_item.content_type %>">
                      Your browser does not support the video tag.
                    </video>
                  </div>
                <% else %>
                  <div class="p-2 border rounded-lg">
                    <%= link_to media_item.filename, url_for(media_item), class: "text-xs text-blue-600 hover:underline truncate block" %>
                  </div>
                <% end %>
              <% end %>
            </div>
          <% end %>
        </div>
      <% end %>

      <!-- Timestamp -->
      <% ts = @social_post.published_at || @social_post.created_at %>
      <% if ts.present? %>
        <div class="text-gray-500 text-sm mb-1">
          <%= ts.strftime("%l:%M %p Â· %b %-d, %Y") %>
        </div>
      <% end %>

      <!-- Interaction Bar -->
      <div class="flex items-center justify-around pt-2 pb-2 border-t border-b border-gray-200 mt-1">
        <!-- Reply Button -->
        <button 
          class="flex items-center gap-2 hover:text-blue-500 transition-colors"
          data-action="click->social-post#toggleReplyForm"
          data-social-post-target="replyButton">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
          </svg>
          <span class="text-sm" data-social-post-target="repliesCount" id="replies-count-for-post-<%= @social_post.id %>"><%= @social_post.total_replies_count %></span>
        </button>

        <!-- Like Button -->
        <button 
          class="flex items-center gap-2 <%= 'text-red-500' if @social_post.liked_by?(Current.user) %> hover:text-red-500 transition-colors"
          data-action="click->social-post#toggleLike"
          data-social-post-target="likeButton">
          <svg class="w-5 h-5" fill="<%= @social_post.liked_by?(Current.user) ? 'currentColor' : 'none' %>" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
          </svg>
          <span class="text-sm" data-social-post-target="likesCount"><%= @social_post.likes_count %></span>
        </button>

        <!-- Save Button -->
        <button 
          class="flex items-center gap-2 <%= 'text-blue-500' if @social_post.bookmarked_by?(Current.user) %> hover:text-blue-500 transition-colors"
          data-action="click->social-post#toggleSave"
          data-social-post-target="saveButton">
          <svg class="w-5 h-5" fill="<%= @social_post.bookmarked_by?(Current.user) ? 'currentColor' : 'none' %>" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 5a2 2 0 012-2h10a2 2 0 012 2v16l-7-3.5L5 21V5z"></path>
          </svg>
          <span class="text-sm" data-social-post-target="savesCount"><%= @social_post.bookmarks_count %></span>
        </button>
      </div>

      <!-- Reply Form (hidden by default) -->
      <div class="mt-4 hidden" data-social-post-target="replyForm" id="main-reply-form-for-post-<%= @social_post.id %>">
        <%= render 'social_posts/reply_form', social_post: @social_post %>
      </div>

      <!-- Replies Section -->
      <div class="pt-4 border-b border-gray-200">
        <h3 class="text-lg font-semibold text-gray-900 mb-4" id="replies-section-header-<%= @social_post.id %>">
          Replies (<%= @social_post.total_replies_count %>)
        </h3>
        <div id="reply-status-messages" class="mb-2"></div>
        
        <div class="space-y-3" data-social-post-target="repliesList" id="replies-list-for-post-<%= @social_post.id %>">
          <% if @replies.any? %>
            <!-- Debug: Found <%= @replies.count %> replies -->
            <% @replies.each_with_index do |reply, index| %>
              <!-- Debug: Rendering reply <%= reply.id %> (parent: <%= reply.parent_post_id %>) -->
              <div class="<%= 'last:border-b-0' if index == @replies.length - 1 %>">
                <%= render 'social_posts/reply', social_post: reply, main_post_id: @social_post.id %>
              </div>
            <% end %>
          <% else %>
            <div class="text-center py-8 text-gray-500" id="no-replies-message-<%= @social_post.id %>">
              <svg class="w-12 h-12 mx-auto mb-3 text-gray-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
              </svg>
              <p>No replies yet. Be the first to reply!</p>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
</div>
