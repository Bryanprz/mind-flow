<% if social_post.present? %>
<div class="card bg-base-100 border border-gray-300 rounded-lg overflow-hidden mb-2" 
     data-controller="social-post" 
     data-social-post-post-id-value="<%= social_post.id %>"
     data-social-post-url-value="<%= social_post_path(social_post) %>">
  <div class="card-body p-3 rounded-lg">
    <div class="flex pr-6">
      <div class="mr-2 flex-shrink-0">
        <%= link_to user_path(social_post.user), 
                    class: "avatar placeholder hover:opacity-80 transition-opacity",
                    data: { action: "click->social-post#stopPropagation", turbo: false } do %>
          <div class="rounded-full w-10 h-10 overflow-hidden">
            <% if social_post.user.avatar.attached? %>
              <%= image_tag social_post.user.avatar, class: "w-full h-full object-cover" %>
            <% else %>
              <div class="w-full h-full bg-neutral text-neutral-content flex items-center justify-center text-[10px]">
                <%= (social_post.user.name.to_s.first&.upcase || social_post.user.email_address.to_s.first&.upcase) %>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
      <div class="flex-1 min-w-0 pr-2">
        <div class="flex items-center mb-1 cursor-pointer" data-action="click->social-post#openPost">
          <div class="flex-1 min-w-0">
            <h2 class="font-medium text-sm truncate">
              <%= link_to social_post.user.name.presence || social_post.user.email_address, 
                          user_path(social_post.user), 
                          class: "hover:text-blue-600 hover:underline transition-colors",
                          data: { action: "click->social-post#stopPropagation" } %>
            </h2>
            <% ts = social_post.published_at || social_post.created_at %>
            <% if ts.present? %>
              <p class="text-xs text-gray-500"><%= time_ago_in_words(ts) %> ago</p>
            <% end %>
          </div>
        </div>

        <% if social_post.content.present? %>
          <div class="mt-6 text-sm prose prose-sm max-w-none cursor-pointer" data-action="click->social-post#openPost">
            <%= social_post.content %>
          </div>
        <% end %>

        <% if social_post.media.attached? %>
          <div>
            <% if social_post.media.count == 1 %>
              <!-- Single image - show at full width with reasonable max height -->
              <% media_item = social_post.media.first %>
              <% if media_item.blob.content_type.start_with?('image/') %>
                <div class="max-h-96 overflow-hidden rounded-lg">
                  <%= link_to social_post_path(social_post) do %>
                    <%= image_tag media_item, class: "rounded-lg mt-4 w-full h-auto object-contain cursor-pointer" %>
                  <% end %>
                </div>
              <% elsif media_item.blob.content_type.start_with?('video/') %>
                <div class="aspect-video">
                  <video controls class="w-full h-full rounded-lg">
                    <source src="<%= url_for(media_item) %>" type="<%= media_item.content_type %>">
                    Your browser does not support the video tag.
                  </video>
                </div>
              <% else %>
                <div class="p-4 border rounded-lg">
                  <%= link_to media_item.filename, url_for(media_item), class: "text-sm text-blue-600 hover:underline" %>
                </div>
              <% end %>
            <% else %>
              <!-- Multiple media items - use grid layout -->
              <div class="grid grid-cols-2 gap-2">
                <% social_post.media.each do |media_item| %>
                  <% if media_item.blob.content_type.start_with?('image/') %>
                    <div class="aspect-square overflow-hidden rounded-lg">
                      <%= link_to social_post_path(social_post) do %>
                        <%= image_tag media_item, class: "w-full h-full object-cover cursor-pointer" %>
                      <% end %>
                    </div>
                  <% elsif media_item.blob.content_type.start_with?('video/') %>
                    <div class="aspect-video">
                      <video controls class="w-full h-full rounded-lg">
                        <source src="<%= url_for(media_item) %>" type="<%= media_item.content_type %>">
                        Your browser does not support the video tag.
                      </video>
                    </div>
                  <% else %>
                    <div class="p-2 border rounded-lg">
                      <%= link_to media_item.filename, url_for(media_item), class: "text-xs text-blue-600 hover:underline truncate block" %>
                    </div>
                  <% end %>
                <% end %>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Interaction Bar -->
    <div class="flex items-center justify-around mt-3 pt-2 border-t border-gray-100">
      <!-- Reply Button -->
      <button 
        class="flex items-center gap-1 text-black hover:text-blue-500 transition-colors"
        data-action="click->social-post#toggleReplyForm"
        data-social-post-target="replyButton">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
        </svg>
        <span class="text-xs" data-social-post-target="repliesCount"><%= social_post.replies_count %></span>
      </button>

      <!-- Like Button -->
      <button 
        class="flex items-center gap-1 <%= 'text-red-500' if social_post.liked_by?(Current.user) %> hover:text-red-500 transition-colors"
        data-action="click->social-post#toggleLike"
        data-social-post-target="likeButton">
        <svg class="w-4 h-4" fill="<%= social_post.liked_by?(Current.user) ? 'currentColor' : 'none' %>" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
        </svg>
        <span class="text-xs" data-social-post-target="likesCount"><%= social_post.likes_count %></span>
      </button>

      <!-- Save Button -->
      <button 
        class="flex items-center gap-1 <%= 'text-blue-500' if social_post.bookmarked_by?(Current.user) %> hover:text-blue-500 transition-colors"
        data-action="click->social-post#toggleSave"
        data-social-post-target="saveButton">
        <svg class="w-4 h-4" fill="<%= social_post.bookmarked_by?(Current.user) ? 'currentColor' : 'none' %>" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 5a2 2 0 012-2h10a2 2 0 012 2v16l-7-3.5L5 21V5z"></path>
        </svg>
        <span class="text-xs" data-social-post-target="savesCount"><%= social_post.bookmarks_count %></span>
      </button>
    </div>

    <!-- Reply Form (hidden by default) -->
    <div class="mt-3 hidden" data-social-post-target="replyForm">
      <%= form_with model: [social_post, SocialPost.new], 
          url: social_post_replies_path(social_post),
          class: "space-y-3", 
          id: "reply-form-#{social_post.id}",
          data: { 
            controller: "image-preview social-post",
            action: "submit->social-post#createReply",
            image_preview_form_id_value: "reply_#{social_post.id}",
            social_post_post_id_value: social_post.id,
            social_post_original_post_id_value: social_post.id,
            turbo: false
          },
          multipart: true do |f| %>
        <%= f.hidden_field :parent_post_id, value: social_post.id, id: "social_post_parent_post_id_#{social_post.id}" %>
        
        <div class="border border-gray-300 rounded-lg overflow-hidden">
          <%= f.rich_text_area :content, 
              placeholder: "Write a reply...", 
              class: "w-full min-h-[80px] p-3 border-0 resize-none focus:ring-0 focus:outline-none" %>
        </div>
        
        <!-- Media Upload Section -->
        <div class="form-control">
          <div class="flex items-center justify-between">
            <div class="flex items-center gap-4">
              <%= f.label :media, class: "cursor-pointer text-gray-500 hover:text-primary transition-colors flex items-center gap-2", data: { action: "click->image-preview#handleFileClick" } do %>
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M4 3a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V5a2 2 0 00-2-2H4zm12 12H4l4-8 3 6 2-4 3 6z" clip-rule="evenodd" />
                </svg>
                <span class="text-sm">Add Media</span>
                <%= f.file_field :media, multiple: true, class: "hidden", data: { image_preview_target: "fileInput" } %>
              <% end %>
              
              <div class="text-xs text-gray-400">
                Drag and drop images here or click to upload
              </div>
            </div>
            
            <!-- Submit Button -->
            <%= f.submit "Reply", class: "btn btn-sm btn-primary text-white" %>
          </div>
          
          <!-- Image Preview Area -->
          <div class="mt-3 hidden" data-image-preview-target="previewContainer">
            <div class="grid grid-cols-2 gap-2" data-image-preview-target="previewGrid">
              <!-- Preview images will be inserted here -->
            </div>
          </div>
        </div>
      <% end %>
    </div>

  </div>
</div>
<% end %>
