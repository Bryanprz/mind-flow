<div class="card bg-base-100 border border-gray-300 rounded-lg overflow-hidden">
  <div class="card-body p-3">
    <div class="flex items-center mb-1">
      <div class="avatar placeholder mr-2">
        <div class="bg-neutral text-neutral-content rounded-full w-6 h-6">
          <span class="text-[10px]"><%= (social_post.user.name.to_s.first&.upcase || social_post.user.email_address.to_s.first&.upcase) %></span>
        </div>
      </div>
      <div class="flex-1 min-w-0">
        <h2 class="font-medium text-sm truncate"><%= social_post.user.name.presence || social_post.user.email_address %></h2>
        <% ts = social_post.published_at || social_post.created_at %>
        <% if ts.present? %>
          <p class="text-xs text-gray-500"><%= time_ago_in_words(ts) %> ago</p>
        <% end %>
      </div>
    </div>

    <p class="text-sm mt-1 mb-2"><%= social_post.content %></p>

    <% if social_post.media.attached? %>
      <div class="mt-2">
        <div class="grid grid-cols-2 gap-2">
          <% social_post.media.each do |media_item| %>
            <% if media_item.image? %>
              <div class="aspect-square overflow-hidden rounded-lg">
                <%= image_tag media_item, class: "w-full h-full object-cover" %>
              </div>
            <% elsif media_item.video? %>
              <div class="aspect-video">
                <video controls class="w-full h-full rounded-lg">
                  <source src="<%= url_for(media_item) %>" type="<%= media_item.content_type %>">
                  Your browser does not support the video tag.
                </video>
              </div>
            <% else %>
              <div class="p-2 border rounded-lg">
                <%= link_to media_item.filename, url_for(media_item), class: "text-xs text-blue-600 hover:underline truncate block" %>
              </div>
            <% end %>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
