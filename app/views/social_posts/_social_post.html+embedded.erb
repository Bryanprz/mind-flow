<div class="card bg-base-100 border-b border-gray-200 first:border-t-0 last:border-b-0 rounded-none [&>*]:rounded-none">
  <div class="<%= 'pb-2' if social_post.media.attached? %> card-body py-3">
    <div class="flex items-center mb-2">
      <div class="avatar placeholder mr-3">
        <div class="bg-neutral text-neutral-content w-8 h-8 flex items-center justify-center">
          <span class="text-xs"><%= (social_post.user.name.to_s.first&.upcase || social_post.user.email_address.to_s.first&.upcase) %></span>
        </div>
      </div>
      <div>
        <h2 class="card-title text-sm"><%= social_post.user.name.presence || social_post.user.email_address %></h2>
        <% ts = social_post.published_at || social_post.created_at %>
        <% if ts.present? %>
          <p class="text-xs text-gray-500"><%= ts.strftime('%b %-d, %Y') %></p>
        <% end %>
      </div>
    </div>

    <div class="flex gap-4 items-center min-h-[4.5rem]">
      <div class="flex-1 self-center">
        <p class="mb-0"><%= social_post.content %></p>
      </div>
      
      <% if social_post.media.attached? %>
        <div class="flex-shrink-0 w-24 h-24">
          <% media_item = social_post.media.first %>
          <% if media_item.image? %>
            <%= image_tag media_item, 
                         class: "w-24 h-24 object-cover rounded-lg border border-gray-200", 
                         alt: "Post image" %>
          <% elsif media_item.video? %>
            <div class="relative w-24 h-24 bg-gray-100 rounded-lg border border-gray-200 flex items-center justify-center">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z" />
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            </div>
          <% else %>
            <div class="w-24 h-24 border border-gray-200 rounded-lg flex items-center justify-center bg-gray-50">
              <div class="text-center p-2">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 mx-auto text-gray-400 mb-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21h10a2 2 0 002-2V9.414a1 1 0 00-.293-.707l-5.414-5.414A1 1 0 0012.586 3H7a2 2 0 00-2 2v14a2 2 0 002 2z" />
                </svg>
                <span class="text-xs text-gray-500 truncate block"><%= media_item.filename %></span>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
