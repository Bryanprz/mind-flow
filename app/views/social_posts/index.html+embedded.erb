<%# Embedded variant: render a compact list suitable for the dashboard card feed %>
<%= turbo_frame_tag "social_feed" do %>
  <% if @social_posts.any? %>
    <div class="space-y-3">
      <%= render partial: "social_posts/social_post", collection: @social_posts, as: :social_post, locals: { embedded: true } %>
    </div>
  <% else %>
    <div class="text-sm p-4 text-center text-gray-500">
      No posts yet. Be the first to share!
    </div>
  <% end %>
<% end %>
