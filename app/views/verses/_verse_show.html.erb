<div class="card list-row p-3 border-b border border-gray-300 max-w-lg">
  <div class="text-4xl font-thin opacity-30 tabular-nums"><%= verse.verse_number.to_s.rjust(2, '0') %></div>
  <div class="list-col-grow">
    <div class="font-semibold"><%= truncate(verse.text_header, length: 40) %></div>
    <div class="text-sm opacity-80 mt-1 break-words"><%= verse.text %></div>
    <div class="text-xs uppercase font-semibold opacity-60 mt-2"><%= verse.book.title %></div>
  </div>
  <%= link_to verse_path(verse), class: "btn btn-square btn-ghost" do %>
    <svg class="size-[1.2em]" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"><g stroke-linejoin="round" stroke-linecap="round" stroke-width="2" fill="none" stroke="currentColor"><path d="M6 3L20 12 6 21 6 3z"></path></g></svg>
  <% end %>
</div>
