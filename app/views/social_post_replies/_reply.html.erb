<div class="flex items-start gap-2 py-2 border-b border-gray-100 last:border-b-0" data-controller="social-post" data-social-post-post-id-value="<%= reply.social_post.id %>">
  <div class="avatar placeholder">
    <div class="rounded-full w-6 h-6 overflow-hidden">
      <% if reply.user.avatar.attached? %>
        <%= image_tag reply.user.avatar, class: "w-full h-full object-cover" %>
      <% else %>
        <div class="w-full h-full bg-neutral text-neutral-content flex items-center justify-center text-[10px]">
          <%= reply.user.name.first.upcase %>
        </div>
      <% end %>
    </div>
  </div>
  <div class="flex-1 min-w-0">
    <div class="flex items-center justify-between">
      <div class="flex items-center gap-2">
        <span class="font-medium text-xs"><%= reply.user.name %></span>
        <span class="text-xs text-gray-500"><%= time_ago_in_words(reply.created_at) %> ago</span>
      </div>
      <!-- Reply button moved to top right -->
      <button 
        class="flex items-center gap-1 text-gray-500 hover:text-blue-500 transition-colors text-xs"
        data-action="click->social-post#toggleReplyForm"
        data-social-post-target="replyButton">
        <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
        </svg>
        <span data-social-post-target="repliesCount">0</span>
      </button>
    </div>
    
    <!-- Reply content with truncation -->
    <div class="text-sm mt-1 prose prose-sm max-w-none">
      <% if reply.content.present? %>
        <% content_text = reply.content.to_plain_text %>
        <% if content_text.length > 150 %>
          <div class="reply-content">
            <span class="truncated-content">
              <%= content_text.truncate(150) %>
            </span>
            <button class="text-blue-500 hover:text-blue-700 text-xs ml-1" onclick="this.previousSibling.style.display='none'; this.nextSibling.style.display='block'; this.style.display='none'">
              See More
            </button>
            <div class="full-content" style="display: none;">
              <%= reply.content %>
              <button class="text-blue-500 hover:text-blue-700 text-xs ml-1" onclick="this.previousSibling.style.display='none'; this.previousSibling.previousSibling.previousSibling.style.display='inline'; this.previousSibling.previousSibling.style.display='inline'; this.style.display='none'">
                See Less
              </button>
            </div>
          </div>
        <% else %>
          <%= reply.content %>
        <% end %>
      <% else %>
        <span class="text-gray-500 italic">This reply appears to be empty</span>
      <% end %>
    </div>

    <!-- Reply Form (hidden by default) -->
    <div class="mt-2 hidden" data-social-post-target="replyForm">
      <%= form_with model: [reply.social_post, SocialPostReply.new], class: "space-y-2", data: { action: "submit->social-post#createReply" } do |f| %>
        <div class="border border-gray-300 rounded-lg overflow-hidden">
          <%= f.rich_text_area :content, 
              placeholder: "Reply to @#{reply.user.handle || reply.user.name}...", 
              class: "w-full min-h-[60px] p-3 border-0 resize-none focus:ring-0 focus:outline-none",
              data: { 
                direct_upload_url: rails_direct_uploads_url
              } %>
        </div>
        <div class="flex justify-end">
          <%= f.submit "Reply", class: "btn btn-xs btn-primary text-white" %>
        </div>
      <% end %>
    </div>

    <!-- Replies List (empty for nested replies) -->
    <div class="mt-2 hidden" data-social-post-target="repliesList"></div>
  </div>
</div>
