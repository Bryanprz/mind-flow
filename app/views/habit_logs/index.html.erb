<% content_for :main_container_class, 'w-full bg-base-200 min-h-full' %>

<div class="container mx-auto px-4 py-8 max-w-6xl">
  <%= render 'shared/flash' if flash.any? %>

  <!-- Header -->
  <div class="mb-6">
    <div class="flex items-center justify-between mb-4">
      <div>
        <h1 class="text-3xl font-bold text-gray-900">Habit Check-Ins</h1>
        <p class="text-gray-600 mt-1">Track your progress and review your habit journey</p>
      </div>
      <div class="flex gap-2">
        <%= link_to dashboard_path, class: "btn btn-ghost btn-sm" do %>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
            <path d="M10.707 2.293a1 1 0 00-1.414 0l-7 7a1 1 0 001.414 1.414L4 10.414V17a1 1 0 001 1h2a1 1 0 001-1v-2a1 1 0 011-1h2a1 1 0 011 1v2a1 1 0 001 1h2a1 1 0 001-1v-6.586l.293.293a1 1 0 001.414-1.414l-7-7z" />
          </svg>
          Dashboard
        <% end %>
      </div>
    </div>

    <!-- View Toggle -->
    <div class="tabs tabs-boxed bg-base-100 w-fit">
      <%= link_to habit_logs_path, class: "tab #{@show_week_view ? 'tab-active' : ''}" do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
        </svg>
        Week View
      <% end %>
      <%= link_to habit_logs_path(view: 'all'), class: "tab #{!@show_week_view ? 'tab-active' : ''}" do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 10h16M4 14h16M4 18h16" />
        </svg>
        All Logs
      <% end %>
    </div>
  </div>

  <% if @show_week_view %>
    <!-- Week View -->
    <div class="card bg-base-100 shadow-xl">
      <div class="card-body">
        <h2 class="card-title text-xl mb-6">
          Last 7 Days
          <span class="text-sm font-normal text-gray-500">
            (<%= @week_start.strftime("%b %d") %> - <%= @week_end.strftime("%b %d, %Y") %>)
          </span>
        </h2>

        <div class="grid gap-4">
          <% @week_days.each do |day| %>
            <div class="p-4 rounded-lg border-2 <%= day[:is_today] ? 'border-primary bg-primary/5' : day[:is_completed] ? 'border-success bg-success/5' : 'border-base-300 bg-base-100' %>">
              <div class="flex items-center justify-between">
                <div class="flex items-center gap-4">
                  <!-- Date Info -->
                  <div class="text-center min-w-[80px]">
                    <div class="text-2xl font-bold <%= day[:is_today] ? 'text-primary' : 'text-gray-900' %>">
                      <%= day[:date].strftime("%d") %>
                    </div>
                    <div class="text-sm text-gray-600">
                      <%= day[:date].strftime("%a") %>
                    </div>
                    <div class="text-xs text-gray-500">
                      <%= day[:date].strftime("%b") %>
                    </div>
                  </div>

                  <!-- Status Badge -->
                  <div class="flex items-center gap-3">
                    <% if day[:is_future] %>
                      <span class="badge badge-ghost">Future</span>
                    <% elsif day[:is_completed] %>
                      <span class="badge badge-success gap-2">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 20 20" fill="currentColor">
                          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                        </svg>
                        Completed
                      </span>
                    <% elsif day[:log] %>
                      <span class="badge badge-warning gap-2">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                        </svg>
                        In Progress
                      </span>
                    <% else %>
                      <span class="badge badge-ghost gap-2">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12H9m12 0a9 9 0 11-18 0 9 9 0 0118 0z" />
                        </svg>
                        Not Started
                      </span>
                    <% end %>
                    
                    <% if day[:is_today] %>
                      <span class="badge badge-primary">Today</span>
                    <% end %>
                  </div>
                </div>

                <!-- Actions -->
                <div class="flex gap-2">
                  <% unless day[:is_future] %>
                    <%= link_to my_habit_plan_path(duration_type: 'daily', date: day[:date]), class: "btn btn-sm btn-primary" do %>
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
                      </svg>
                      <%= day[:is_today] ? 'Check In' : 'View' %>
                    <% end %>
                  <% end %>
                </div>
              </div>

              <!-- Journal Preview (if exists) -->
              <% if day[:log]&.journal_entry.present? %>
                <div class="mt-3 pt-3 border-t border-base-300">
                  <div class="flex items-start gap-2">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mt-0.5 text-gray-500 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
                    </svg>
                    <p class="text-sm text-gray-600 line-clamp-2">
                      <%= day[:log].journal_entry %>
                    </p>
                  </div>
                </div>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    </div>

  <% else %>
    <!-- All Logs View -->
    <div class="card bg-base-100 shadow-xl">
      <div class="card-body">
        <h2 class="card-title text-xl mb-4">All Check-Ins (Last 50)</h2>
        
        <% if @all_logs.any? %>
          <div class="overflow-x-auto">
            <table class="table table-zebra w-full">
              <thead>
                <tr>
                  <th>Date</th>
                  <th>Status</th>
                  <th>Journal</th>
                  <th>Actions</th>
                </tr>
              </thead>
              <tbody>
                <% @all_logs.each do |log| %>
                  <tr>
                    <td>
                      <div class="font-semibold"><%= log.date.strftime("%B %d, %Y") %></div>
                      <div class="text-xs text-gray-500"><%= log.date.strftime("%A") %></div>
                    </td>
                    <td>
                      <% if log.completed_at.present? %>
                        <span class="badge badge-success gap-2">
                          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 20 20" fill="currentColor">
                            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                          </svg>
                          Completed
                        </span>
                      <% else %>
                        <span class="badge badge-warning">In Progress</span>
                      <% end %>
                    </td>
                    <td>
                      <% if log.journal_entry.present? %>
                        <div class="text-sm text-gray-600 line-clamp-2 max-w-md">
                          <%= log.journal_entry %>
                        </div>
                      <% else %>
                        <span class="text-gray-400 text-sm">No journal entry</span>
                      <% end %>
                    </td>
                    <td>
                      <%= link_to my_habit_plan_path(duration_type: 'daily', date: log.date), class: "btn btn-sm btn-ghost" do %>
                        View
                      <% end %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        <% else %>
          <div class="text-center py-12">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-16 w-16 mx-auto text-gray-400 mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
            </svg>
            <h3 class="text-xl font-semibold text-gray-600 mb-2">No Check-Ins Yet</h3>
            <p class="text-gray-500 mb-4">Start your wellness journey by completing your first daily check-in.</p>
            <%= link_to "Go to Today's Plan", my_habit_plan_path(duration_type: 'daily'), class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
</div>

