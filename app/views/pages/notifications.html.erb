    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
      <div class="bg-white/10 backdrop-blur-sm rounded-xl p-6 border border-white/20">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-orange-300 text-sm font-medium">Unread</p>
            <p class="text-3xl font-bold text-white"><%= @notifications_data[:unread].count %></p>
          </div>
          <div class="w-12 h-12 bg-orange-500/20 rounded-lg flex items-center justify-center">
            <span class="text-2xl">üîî</span>
          </div>
        </div>
      </div>

      <div class="bg-white/10 backdrop-blur-sm rounded-xl p-6 border border-white/20">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-green-300 text-sm font-medium">Today</p>
            <p class="text-3xl font-bold text-white"><%= @notifications_data[:unread].count + @notifications_data[:recent].count %></p>
          </div>
          <div class="w-12 h-12 bg-green-500/20 rounded-lg flex items-center justify-center">
            <span class="text-2xl">üìÖ</span>
          </div>
        </div>
      </div>

      <div class="bg-white/10 backdrop-blur-sm rounded-xl p-6 border border-white/20">
