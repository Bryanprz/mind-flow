            <span class="text-4xl">üîî</span>
            <%= @page_title %>
          </h1>
          <p class="text-orange-300 mt-2">Stay updated with your cognitive journey</p>
        </div>
        <div class="flex items-center gap-4">
          <button class="bg-orange-500/20 hover:bg-orange-500/30 text-orange-300 px-4 py-2 rounded-lg font-medium transition-colors">
            Mark All Read
          </button>
          <button class="bg-orange-500 hover:bg-orange-600 text-white px-6 py-3 rounded-lg font-semibold transition-colors">
            Settings
          </button>
        </div>
      </div>
    </div>
  </div>

  <!-- Main Content -->
