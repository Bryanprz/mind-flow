<div class="min-h-screen bg-gray-50">
  <!-- Demo Mode Banner -->
  <div class="bg-blue-100 border-l-4 border-blue-500 text-blue-700 p-4 mb-6">
    <div class="flex">
      <div class="flex-shrink-0">
        <svg class="h-5 w-5 text-blue-400" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd" />
        </svg>
      </div>
      <div class="ml-3">
        <p class="text-sm">
          <strong>Demo Mode:</strong> This shows saved posts functionality. All bookmarks are simulated for portfolio demonstration.
        </p>
      </div>
    </div>
  </div>

  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <div class="mb-8">
      <h1 class="text-3xl font-bold text-gray-900">Saved Posts</h1>
      <p class="mt-2 text-gray-600">Posts you've bookmarked for later reference</p>
    </div>

    <!-- Saved Posts Grid -->
    <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
      <% @demo_saved_posts.each do |post| %>
        <div class="bg-white rounded-lg shadow-sm border border-gray-200 overflow-hidden hover:shadow-md transition-shadow">
          <div class="p-6">
            <div class="flex items-start justify-between mb-4">
              <div class="flex items-center space-x-3">
                <div class="h-8 w-8 bg-gradient-to-r from-green-500 to-blue-500 rounded-full flex items-center justify-center">
                  <span class="text-white font-semibold text-xs"><%= post[:user_name].first %></span>
                </div>
                <div>
                  <h3 class="text-sm font-semibold text-gray-900"><%= post[:user_name] %></h3>
                  <time class="text-xs text-gray-500"><%= time_ago_in_words(post[:saved_at]) %> ago</time>
                </div>
              </div>
              <button class="text-gray-400 hover:text-red-500 transition-colors">
                <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M5 5a2 2 0 012-2h10a2 2 0 012 2v16l-7-3.5L5 21V5z" clip-rule="evenodd" />
                </svg>
              </button>
            </div>
            
            <p class="text-gray-900 text-sm leading-relaxed"><%= post[:content] %></p>
            
            <div class="mt-4 pt-4 border-t border-gray-100">
              <div class="flex items-center justify-between text-xs text-gray-500">
                <span>Saved <%= time_ago_in_words(post[:saved_at]) %> ago</span>
                <div class="flex items-center space-x-3">
                  <button class="hover:text-blue-600 transition-colors">View Post</button>
                  <button class="hover:text-red-600 transition-colors">Remove</button>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>

    <!-- Empty State (if no saved posts) -->
    <% if @demo_saved_posts.empty? %>
      <div class="text-center py-12">
        <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 5a2 2 0 012-2h10a2 2 0 012 2v16l-7-3.5L5 21V5z"></path>
        </svg>
        <h3 class="mt-2 text-sm font-medium text-gray-900">No saved posts</h3>
        <p class="mt-1 text-sm text-gray-500">Start saving posts from the community to see them here.</p>
        <div class="mt-6">
          <button class="inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-purple-600 hover:bg-purple-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-purple-500">
            Browse Community
          </button>
        </div>
      </div>
    <% end %>
  </div>
</div>


