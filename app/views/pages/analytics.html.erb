        <div class="flex items-center justify-between">
          <div>
            <p class="text-green-300 text-sm font-medium">Deep Work Sessions</p>
            <p class="text-3xl font-bold text-white"><%= @analytics_data[:performance_metrics][:deep_work_sessions] %></p>
          </div>
          <div class="w-12 h-12 bg-green-500/20 rounded-lg flex items-center justify-center">
            <span class="text-2xl">âš¡</span>
          </div>
        </div>
