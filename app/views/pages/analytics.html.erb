        <div class="flex items-center justify-between">
          <div>
            <p class="text-yellow-300 text-sm font-medium">Consistency Score</p>
            <p class="text-3xl font-bold text-white"><%= @analytics_data[:performance_metrics][:consistency_score] %>%</p>
          </div>
