<div class="min-h-screen bg-gray-50">
  <!-- Demo Mode Banner -->
  <div class="bg-blue-100 border-l-4 border-blue-500 text-blue-700 p-4 mb-6">
    <div class="flex">
      <div class="flex-shrink-0">
        <svg class="h-5 w-5 text-blue-400" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd" />
        </svg>
      </div>
      <div class="ml-3">
        <p class="text-sm">
          <strong>Demo Mode:</strong> This is a demonstration of the messaging interface. Messages are simulated for portfolio purposes and are not actually sent or received.
        </p>
      </div>
    </div>
  </div>

  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 pt-24 pb-8">
    <div class="mb-8">
      <h1 class="text-3xl font-bold text-gray-900">Messages</h1>
      <p class="mt-2 text-gray-600">Connect with your wellness coach and support team</p>
    </div>

    <div class="bg-white rounded-lg shadow-sm border border-gray-200 overflow-hidden">
      <div class="flex h-[600px]">
        <!-- Conversations Sidebar -->
        <div class="w-1/3 border-r border-gray-200 bg-gray-50">
          <div class="p-4 border-b border-gray-200">
            <h2 class="text-lg font-semibold text-gray-900">Conversations</h2>
          </div>
          
          <div class="overflow-y-auto">
            <% @demo_conversations.each do |conversation| %>
              <div class="p-4 hover:bg-gray-100 cursor-pointer border-b border-gray-200">
                <div class="flex items-center space-x-3">
                  <div class="flex-shrink-0">
                    <div class="h-10 w-10 bg-gradient-to-r from-purple-500 to-pink-500 rounded-full flex items-center justify-center">
                      <span class="text-white font-semibold text-sm"><%= conversation[:user_name].first %></span>
                    </div>
                  </div>
                  <div class="flex-1 min-w-0">
                    <div class="flex items-center justify-between">
                      <h3 class="text-sm font-semibold text-gray-900 truncate"><%= conversation[:user_name] %></h3>
                      <% if conversation[:unread_count] > 0 %>
                        <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-purple-100 text-purple-800">
                          <%= conversation[:unread_count] %>
                        </span>
                      <% end %>
                    </div>
                    <p class="text-sm text-gray-500 truncate mt-1"><%= conversation[:last_message] %></p>
                    <time class="text-xs text-gray-400 mt-1"><%= time_ago_in_words(conversation[:last_message_time]) %> ago</time>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        </div>

        <!-- Chat Area -->
        <div class="flex-1 flex flex-col">
          <!-- Chat Header -->
          <div class="p-4 border-b border-gray-200 bg-white">
            <div class="flex items-center space-x-3">
              <div class="h-10 w-10 bg-gradient-to-r from-purple-500 to-pink-500 rounded-full flex items-center justify-center">
                <span class="text-white font-semibold text-sm">W</span>
              </div>
              <div>
                <h3 class="text-sm font-semibold text-gray-900">Wellness Coach</h3>
                <p class="text-xs text-gray-500">Online</p>
              </div>
            </div>
          </div>

          <!-- Messages -->
          <div class="flex-1 overflow-y-auto p-4 space-y-4">
            <% @demo_messages.each do |message| %>
              <div class="flex <%= message[:is_sent] ? 'justify-end' : 'justify-start' %>">
                <div class="<%= message[:is_sent] ? 'bg-purple-600 text-white' : 'bg-gray-200 text-gray-900' %> rounded-lg px-4 py-2 max-w-xs lg:max-w-md">
                  <p class="text-sm"><%= message[:content] %></p>
                  <time class="text-xs <%= message[:is_sent] ? 'text-purple-200' : 'text-gray-500' %> mt-1 block">
                    <%= time_ago_in_words(message[:created_at]) %> ago
                  </time>
                </div>
              </div>
            <% end %>
          </div>

          <!-- Message Input -->
          <div class="p-4 border-t border-gray-200 bg-white">
            <div class="flex space-x-4">
              <div class="flex-1">
                <textarea 
                  placeholder="Type a message..." 
                  class="w-full p-3 border border-gray-300 rounded-lg resize-none focus:ring-2 focus:ring-purple-500 focus:border-transparent"
                  rows="2"
                ></textarea>
              </div>
              <button 
                class="bg-purple-600 text-white px-6 py-2 rounded-lg hover:bg-purple-700 transition-colors self-end"
                onclick="alert('Demo Mode: Messages are not sent')"
              >
                Send
              </button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>


