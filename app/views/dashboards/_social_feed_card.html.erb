<!-- Social Feed Card -->
<div class="card bg-base-100 border border-gray-300 rounded-2xl relative">
  <div class="card-body p-0 h-full flex flex-col">
    <!-- Feed Header -->
    <div class="p-4 border-b border-gray-200">
      <h2 class="card-title text-lg font-semibold text-gray-800">
        Community Feed
      </h2>
      <p class="text-sm text-gray-500">Latest from our wellness community</p>
    </div>
    
    <!-- Feed Content -->
    <div class="absolute top-[120px] bottom-0 left-0 right-0 overflow-y-auto">
      <!-- Post 1 -->
      <div class="p-4 border-b border-gray-100 hover:bg-base-200 hover:rounded-b-xl transition-colors">
        <div class="flex items-start space-x-3">
          <div class="avatar">
            <div class="w-10 h-10 rounded-full bg-primary/10 flex items-center justify-center">
              <span class="text-primary font-semibold">JD</span>
            </div>
          </div>
          <div class="flex-1">
            <div class="flex items-center justify-between">
              <h4 class="font-semibold">Jane Doe</h4>
              <span class="text-xs text-gray-400">2h ago</span>
            </div>
            <p class="mt-1 text-gray-700">Just tried the recommended morning routine for Vata types. Feeling so balanced and energized! ðŸŒ¿ #Ayurveda #SelfCare</p>
            <div class="mt-2 grid grid-cols-2 gap-2 rounded-lg overflow-hidden">
              <img src="https://images.unsplash.com/photo-1498837167922-ddd27525d352?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1470&q=80" alt="Morning routine" class="w-full h-32 object-cover rounded">
              <img src="https://images.unsplash.com/photo-1545205597-3d9d02c29597?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1470&q=80" alt="Herbal tea" class="w-full h-32 object-cover rounded">
            </div>
            <div class="mt-2 flex items-center text-sm text-gray-500 space-x-4">
              <button class="flex items-center hover:text-red-500">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
                </svg>
                24
              </button>
              <button class="flex items-center hover:text-blue-500">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
                </svg>
                5
              </button>
            </div>
          </div>
        </div>
      </div>

      <!-- Post 2 -->
      <div class="p-4 border-b border-gray-100 hover:bg-base-200 transition-colors">
        <div class="flex items-start space-x-3">
          <div class="avatar">
            <div class="w-10 h-10 rounded-full bg-blue-100 flex items-center justify-center">
              <span class="text-blue-600 font-semibold">AS</span>
            </div>
          </div>
          <div class="flex-1">
            <div class="flex items-center justify-between">
              <h4 class="font-semibold">Alex Smith</h4>
              <span class="text-xs text-gray-400">5h ago</span>
            </div>
            <p class="mt-1 text-gray-700">Sharing my favorite Pitta-balancing recipe for these hot summer days! ðŸ¥— Perfect for keeping cool and energized.</p>
            <div class="mt-2 rounded-lg overflow-hidden">
              <img src="https://images.unsplash.com/photo-1546069901-ba9599a7e63c?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1480&q=80" alt="Healthy salad" class="w-full h-48 object-cover">
            </div>
            <div class="mt-2 flex items-center text-sm text-gray-500 space-x-4">
              <button class="flex items-center hover:text-red-500">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
                </svg>
                42
              </button>
              <button class="flex items-center hover:text-blue-500">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
                </svg>
                8
              </button>
            </div>
          </div>
        </div>
      </div>

      <!-- Post 3 - User's Prakruti Info -->
      <div class="p-4 border-b border-gray-100 bg-blue-50">
        <div class="flex items-start space-x-3">
          <div class="avatar">
            <div class="w-10 h-10 rounded-full bg-base-200 flex items-center justify-center">
              <span class="text-primary font-semibold">ME</span>
            </div>
          </div>
          <div class="flex-1">
            <div class="flex items-center justify-between">
              <h4 class="font-semibold">Your Prakruti</h4>
            </div>
            <p class="mt-1 text-gray-700">
              <%= t("doshas.#{Current.user.prakruti.name.downcase}.description") %>
            </p>
            <ul class="mt-2 space-y-1 text-sm text-gray-600">
              <% t("doshas.#{Current.user.prakruti.name.downcase}.bullet_points").each do |dosha_point| %>
                <li class="flex items-start">
                  <svg class="h-4 w-4 text-green-500 mr-1 mt-0.5 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                  </svg>
                  <%= dosha_point %>
                </li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
    
    <!-- New Post Input -->
    <div class="absolute bottom-0 left-0 right-0 p-3 border-t border-gray-200 bg-base-100">
      <div class="flex items-center space-x-2">
        <div class="avatar">
          <div class="w-8 h-8 rounded-full bg-primary/10 flex items-center justify-center">
            <span class="text-xs font-semibold text-primary">ME</span>
          </div>
        </div>
        <div class="flex-1 relative">
          <input type="text" placeholder="Share your wellness journey..." class="input input-bordered input-sm w-full pr-10" />
          <button class="absolute right-2 top-1/2 transform -translate-y-1/2 text-gray-400 hover:text-primary">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
            </svg>
          </button>
        </div>
      </div>
    </div>
  </div>
</div>
