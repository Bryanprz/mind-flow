<!-- AI Chat Interface -->
<div class="card bg-base-100 border border-gray-300 flex flex-col h-full" data-controller="chat">
  <!-- Chat Header -->
  <div class="p-4 border-b border-gray-200">
    <div class="flex items-center gap-3">
      <div class="w-8 h-8 rounded-full bg-primary flex items-center justify-center text-white">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M18 10c0 3.866-3.582 7-8 7a8.841 8.841 0 01-4.083-.98L2 17l1.338-3.123C2.493 12.767 2 11.434 2 10c0-3.866 3.582-7 8-7s8 3.134 8 7zM7 9H5v2h2V9zm8 0h-2v2h2V9zM9 9h2v2H9V9z" clip-rule="evenodd" />
        </svg>
      </div>
      <div>
        <h3 class="font-semibold">Ayurvedic Assistant</h3>
        <p class="text-xs text-gray-500">Ask me anything about your health</p>
      </div>
    </div>
  </div>
  
  <!-- Chat Messages -->
  <%= turbo_stream_from "ai_chat" %>
  <div id="chat_messages" data-chat-target="messages" class="flex-1 overflow-y-auto p-4 space-y-4" style="max-height: 200px;">
    <!-- Welcome Message -->
    <div class="chat chat-start">
      <div class="chat-bubble chat-bubble-success">
        <div class="flex items-center gap-2 mb-1">
          <span class="font-bold">Namaste!</span>
        </div>
        <p class="text-sm">I'm your Ayurvedic assistant. Ask me anything about your health journey, dosha balance, or daily routine.</p>
      </div>
    </div>
    
    <!-- Suggested Questions -->
    <div class="grid grid-cols-1 gap-2 mt-4">
      <%= form_with url: ai_ask_path, method: :post, class: "w-full" do |form| %>
        <%= form.hidden_field :question, value: "What foods balance my dosha?" %>
        <%= form.button "What foods balance my dosha?", class: "btn btn-sm btn-outline justify-start text-left text-sm w-full border-neutral text-neutral hover:bg-neutral hover:text-neutral-content" %>
      <% end %>
      <%= form_with url: ai_ask_path, method: :post, class: "w-full" do |form| %>
        <%= form.hidden_field :question, value: "Suggest a morning routine for me" %>
        <%= form.button "Suggest a morning routine for me", class: "btn btn-sm btn-outline justify-start text-left text-sm w-full border-neutral text-neutral hover:bg-neutral hover:text-neutral-content" %>
      <% end %>
      <%= form_with url: ai_ask_path, method: :post, class: "w-full" do |form| %>
        <%= form.hidden_field :question, value: "How can I improve my sleep?" %>
        <%= form.button "How can I improve my sleep?", class: "btn btn-sm btn-outline justify-start text-left text-sm w-full border-neutral text-neutral hover:bg-neutral hover:text-neutral-content" %>
      <% end %>
    </div>
  </div>
  
  <!-- Message Input -->
  <div class="p-3 border-t border-gray-200">
    <%= form_with url: ai_ask_path, method: :post, data: { chat_target: "form", action: "turbo:submit-end->chat#clearForm" } do |form| %>
      <div class="relative">
        <%= form.text_field :question, 
            class: "input input-bordered w-full pr-12",
            placeholder: "Ask me anything about your health..." %>
        <%= form.button class: "absolute right-2 top-1/2 -translate-y-1/2 text-gray-400 hover:text-primary" do %>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-8.707l-3-3a1 1 0 00-1.414 1.414L10.586 9H7a1 1 0 100 2h3.586l-1.293 1.293a1 1 0 101.414 1.414l3-3a1 1 0 000-1.414z" clip-rule="evenodd" />
          </svg>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
