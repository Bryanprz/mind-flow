<div class="text-md space-y-8 md:space-y-4 lg:space-y-5 flex flex-col lg:h-full h-auto dashboard-content" data-controller="modal">
  <% if @habit_plan %>
    <!-- First Row - 2 equal columns -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8 md:gap-4 flex-shrink-0">
      <%= render 'dashboards/streak_card' %>
      <%= render 'dashboards/calendar_card' %>
    </div>

    <!-- Second Row - 2 equal columns that expand to fill remaining space on desktop, fixed height on mobile -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8 md:gap-4 lg:flex-1 lg:min-h-0 min-h-[400px] md:min-h-[500px] dashboard-grid">
      <%= render 'dashboards/ai_chat_card' %>
      <%= render 'dashboards/social_feed_card' %>
    </div>
  <% end %>
</div>
